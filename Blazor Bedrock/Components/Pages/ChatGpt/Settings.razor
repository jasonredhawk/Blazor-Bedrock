@page "/chatgpt/settings"
@using Blazor_Bedrock.Services.ChatGpt
@using Blazor_Bedrock.Services.Tenant
@using Blazor_Bedrock.Services
@using Blazor_Bedrock.Services.FeatureFlag
@using Blazor_Bedrock.Data.Models
@using Blazor_Bedrock.Data
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject IChatGptService ChatGptService
@inject ITenantService TenantService
@inject IFeatureFlagService FeatureFlagService
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject INotificationService NotificationService
@inject NavigationManager Navigation
@inject ApplicationDbContext _context
@inject IDatabaseSyncService DbSync
@rendermode InteractiveServer

<PageTitle>ChatGPT Settings</PageTitle>

<div class="container mt-4" style="max-width: 800px;">
    <h4 class="mb-4">ChatGPT Settings</h4>
    
    @if (_currentTenant == null)
    {
        <div class="alert alert-warning mb-4">
            No organization selected. Please select an organization to configure ChatGPT settings.
        </div>
    }
    else
    {
        <div class="card shadow mb-4">
            <div class="card-body p-4">
                <h6 class="mb-2">Organization</h6>
                <p class="mb-4">
                    <span class="badge bg-primary">@_currentTenant.Name</span>
                </p>
                <small class="text-muted">
                    These settings are specific to this organization. Each organization can have its own unique API key.
                </small>
            </div>
        </div>
        
        <div class="card shadow">
            <div class="card-body p-4">
                <h6 class="mb-4">API Configuration</h6>
                
                @* Status Section *@
                <div class="bg-light p-3 mb-4 rounded">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi @(_hasApiKey ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-warning") me-2"></i>
                        <strong>@(_hasApiKey ? "API Key Configured" : "No API Key Configured")</strong>
                    </div>
                    @if (_hasApiKey)
                    {
                        <p class="text-muted mb-2">
                            API key is configured and encrypted for this organization.
                        </p>
                        @if (!string.IsNullOrEmpty(_currentPreferredModel))
                        {
                            <div class="d-flex align-items-center">
                                <span class="me-2">Selected Model:</span>
                                <span class="badge bg-primary">@_currentPreferredModel</span>
                            </div>
                        }
                        else
                        {
                            <p class="text-warning mb-0">
                                No preferred model selected. Please select a model below.
                            </p>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">
                            Please enter an OpenAI API key to enable ChatGPT functionality for this organization.
                        </p>
                    }
                </div>
                
                @* Test Connection Status *@
                @if (_testResult != null)
                {
                    <div class="alert alert-@GetAlertClass(_testResult.Severity) alert-dismissible fade show mb-4" role="alert">
                        <strong>@_testResult.Title</strong>
                        @if (!string.IsNullOrEmpty(_testResult.Message))
                        {
                            <p class="mb-0">@_testResult.Message</p>
                        }
                        <button type="button" class="btn-close" @onclick="() => _testResult = null" aria-label="Close"></button>
                    </div>
                }
                
                <div class="mb-3">
                    <label for="apiKey" class="form-label">OpenAI API Key</label>
                    <input type="password" class="form-control" id="apiKey" @bind="_apiKey" />
                    <div class="form-text">Your API key is encrypted and stored securely. Leave blank to keep existing key.</div>
                </div>
                
                <div class="mb-3">
                    <label for="preferredModel" class="form-label">Preferred Model</label>
                    <select class="form-select" id="preferredModel" @bind="_preferredModel">
                        @if (!_availableModels.Any())
                        {
                            <option value="" disabled>Loading models...</option>
                        }
                        else
                        {
                            <option value="">Select a model...</option>
                            @foreach (var model in _availableModels)
                            {
                                <option value="@model">@model</option>
                            }
                        }
                    </select>
                    <div class="form-text">Select the default model to use for ChatGPT conversations in this organization.</div>
                </div>
                
                @* Action Buttons *@
                <div class="d-flex gap-2 flex-wrap">
                    <button class="btn btn-primary" @onclick="SaveApiKey" disabled="@(_isLoading || _currentTenant == null)">
                        @if (_isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Saving...</span>
                        }
                        else
                        {
                            <i class="bi bi-save me-2"></i>
                            <span>Save Settings</span>
                        }
                    </button>
                    
                    @if (_hasApiKey)
                    {
                        <button class="btn btn-outline-info" @onclick="TestConnection" disabled="@(_isTestingConnection || _currentTenant == null)">
                            @if (_isTestingConnection)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Testing...</span>
                            }
                            else
                            {
                                <i class="bi bi-cloud-arrow-up me-2"></i>
                                <span>Test Connection</span>
                            }
                        </button>
                    }
                    
                    @if (!string.IsNullOrWhiteSpace(_apiKey))
                    {
                        <button class="btn btn-outline-secondary" @onclick="TestApiKey" disabled="@(_isTestingApiKey || _currentTenant == null)">
                            @if (_isTestingApiKey)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Testing...</span>
                            }
                            else
                            {
                                <i class="bi bi-key me-2"></i>
                                <span>Test New API Key</span>
                            }
                        </button>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    private string _apiKey = string.Empty;
    private string? _preferredModel;
    private string? _currentPreferredModel;
    private List<string> _availableModels = new();
    private bool _isLoading = false;
    private bool _isTestingApiKey = false;
    private bool _isTestingConnection = false;
    private bool _hasApiKey = false;
    private Tenant? _currentTenant;
    private TestResult? _testResult;

    private class TestResult
    {
        public string Severity { get; set; } = "info"; // "success", "error", "warning", "info"
        public string Title { get; set; } = string.Empty;
        public string? Message { get; set; }
    }

    private string GetAlertClass(string severity)
    {
        return severity switch
        {
            "success" => "success",
            "error" => "danger",
            "warning" => "warning",
            _ => "info"
        };
    }

    protected override async Task OnInitializedAsync()
    {
        // Check if ChatGpt feature is enabled
        var isEnabled = await FeatureFlagService.IsEnabledAsync("ChatGpt_Enabled");
        if (!isEnabled)
        {
            await NotificationService.ShowErrorAsync("ChatGPT feature has been disabled.");
            Navigation.NavigateTo("/");
            return;
        }

        await LoadCurrentTenant();
        await LoadAvailableModels();
        await LoadCurrentSettings();
    }

    private async Task LoadCurrentTenant()
    {
        try
        {
            _currentTenant = await TenantService.GetCurrentTenantAsync();
            if (_currentTenant == null)
            {
                await NotificationService.ShowWarningAsync("No organization selected. Please select an organization first.");
            }
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error loading organization: {ex.Message}");
        }
    }

    private async Task LoadAvailableModels()
    {
        // Load default models
        _availableModels = new List<string>
        {
            "gpt-4o-2024-11-20",
            "gpt-4o-mini-2024-11-20",
            "gpt-4-turbo-2024-04-09",
            "gpt-4-0125-preview",
            "gpt-4",
            "gpt-3.5-turbo-0125",
            "gpt-3.5-turbo-16k",
            "gpt-3.5-turbo"
        };
    }

    private async Task LoadCurrentSettings()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (authState.User?.Identity?.IsAuthenticated == true)
            {
                var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                var tenantId = TenantService.GetCurrentTenantId();
                
                if (string.IsNullOrEmpty(userId) || tenantId == null)
                {
                    _hasApiKey = false;
                    return;
                }
                
                await DbSync.ExecuteAsync(async () =>
                {
                    // Prioritize tenant-specific API keys
                    var apiKeyRecord = await _context.ChatGptApiKeys
                        .FirstOrDefaultAsync(k => k.TenantId == tenantId && k.IsActive);
                    
                    if (apiKeyRecord != null)
                    {
                        _hasApiKey = true;
                        _currentPreferredModel = apiKeyRecord.PreferredModel;
                        _preferredModel = apiKeyRecord.PreferredModel;
                        
                        // Try to load actual available models if we have an API key
                        try
                        {
                            var decryptedKey = await ChatGptService.GetDecryptedApiKeyAsync(userId, tenantId);
                            var models = await ChatGptService.GetAvailableModelsAsync(decryptedKey);
                            if (models.Any())
                            {
                                _availableModels = models;
                            }
                        }
                        catch
                        {
                            // If we can't load models, use defaults
                        }
                    }
                    else
                    {
                        _hasApiKey = false;
                        _currentPreferredModel = null;
                        _preferredModel = null;
                    }
                });
            }
        }
        catch (Exception ex)
        {
            await NotificationService.ShowWarningAsync($"Error loading settings: {ex.Message}");
        }
    }

    private async Task SaveApiKey()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        var tenantId = TenantService.GetCurrentTenantId();
        
        if (string.IsNullOrEmpty(userId))
        {
            await NotificationService.ShowErrorAsync("Unable to identify current user. Please log out and log back in.");
            return;
        }

        if (tenantId == null)
        {
            await NotificationService.ShowErrorAsync("No organization selected. Please select an organization first.");
            return;
        }

        if (string.IsNullOrWhiteSpace(_apiKey) && string.IsNullOrEmpty(_preferredModel) && !_hasApiKey)
        {
            await NotificationService.ShowWarningAsync("Please provide an API key or select a preferred model to save.");
            return;
        }

        _isLoading = true;
        _testResult = null;
        try
        {
            // Only update API key if one was provided
            if (!string.IsNullOrWhiteSpace(_apiKey))
            {
                await ChatGptService.SaveApiKeyAsync(userId, tenantId, _apiKey, _preferredModel);
                await NotificationService.ShowSuccessAsync("API key and settings saved successfully");
                _apiKey = string.Empty;
            }
            else if (_hasApiKey)
            {
                // Just update the preferred model for existing API key
                await DbSync.ExecuteAsync(async () =>
                {
                    var apiKeyRecord = await _context.ChatGptApiKeys
                        .FirstOrDefaultAsync(k => k.TenantId == tenantId && k.IsActive);
                    
                    if (apiKeyRecord != null)
                    {
                        apiKeyRecord.PreferredModel = _preferredModel;
                        await _context.SaveChangesAsync();
                    }
                });
                await NotificationService.ShowSuccessAsync("Settings saved successfully");
            }
            else
            {
                await NotificationService.ShowWarningAsync("Please provide an API key to save.");
                return;
            }
            
            await LoadCurrentSettings();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task TestApiKey()
    {
        if (string.IsNullOrWhiteSpace(_apiKey))
        {
            await NotificationService.ShowWarningAsync("Please enter an API key to test.");
            return;
        }

        _isTestingApiKey = true;
        _testResult = null;
        try
        {
            var models = await ChatGptService.GetAvailableModelsAsync(_apiKey);
            if (models.Any())
            {
                _testResult = new TestResult
                {
                    Severity = "success",
                    Title = "API Key Test Successful",
                    Message = $"Found {models.Count} available models. The API key is valid and ready to use."
                };
                _availableModels = models;
                StateHasChanged();
            }
            else
            {
                _testResult = new TestResult
                {
                    Severity = "warning",
                    Title = "API Key Test Completed",
                    Message = "The API key test completed but no models were found. The key may be invalid or have limited access."
                };
            }
        }
        catch (Exception ex)
        {
            _testResult = new TestResult
            {
                Severity = "error",
                Title = "API Key Test Failed",
                Message = ex.Message
            };
        }
        finally
        {
            _isTestingApiKey = false;
            StateHasChanged();
        }
    }

    private async Task TestConnection()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        var tenantId = TenantService.GetCurrentTenantId();
        
        if (string.IsNullOrEmpty(userId) || tenantId == null)
        {
            await NotificationService.ShowErrorAsync("Unable to test connection. Please ensure you're logged in and have an organization selected.");
            return;
        }

        if (!_hasApiKey)
        {
            await NotificationService.ShowWarningAsync("No API key configured. Please save an API key first.");
            return;
        }

        _isTestingConnection = true;
        _testResult = null;
        try
        {
            var apiKey = await ChatGptService.GetDecryptedApiKeyAsync(userId, tenantId);
            var models = await ChatGptService.GetAvailableModelsAsync(apiKey);
            
            if (models.Any())
            {
                var selectedModel = _currentPreferredModel ?? "Not selected";
                _testResult = new TestResult
                {
                    Severity = "success",
                    Title = "Connection Test Successful",
                    Message = $"Successfully connected to OpenAI API. Found {models.Count} available models. Current preferred model: {selectedModel}"
                };
                
                // Update available models if we got new ones
                if (models.Count > _availableModels.Count || !_availableModels.SequenceEqual(models))
                {
                    _availableModels = models;
                }
            }
            else
            {
                _testResult = new TestResult
                {
                    Severity = "warning",
                    Title = "Connection Test Completed",
                    Message = "Connected to OpenAI API but no models were found. The API key may have limited access."
                };
            }
        }
        catch (Exception ex)
        {
            _testResult = new TestResult
            {
                Severity = "error",
                Title = "Connection Test Failed",
                Message = $"Failed to connect to OpenAI API: {ex.Message}"
            };
        }
        finally
        {
            _isTestingConnection = false;
            StateHasChanged();
        }
    }
}
