    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(_messageText) || _isLoading) return;

        _isLoading = true;
        StateHasChanged();
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            var tenantId = TenantService.GetCurrentTenantId();
            
            if (string.IsNullOrEmpty(userId) || tenantId == null)
            {
                await NotificationService.ShowErrorAsync("Unable to identify user or organization. Please log out and log back in.");
                return;
            }

            if (!_currentConversationId.HasValue)
            {
                var selectedSheets = _selectedSheetNames.Any() ? _selectedSheetNames.ToList() : null;
                var newConversation = await ChatGptService.CreateConversationAsync(userId, tenantId, "New Conversation", _preferredModel, _selectedPromptId, _selectedDocumentId, selectedSheets);
                _currentConversationId = newConversation.Id;
                _messages = new List<ChatGptMessage>();
                // Track the current prompt and document for this new conversation
                _currentPromptIdForConversation = _selectedPromptId;
                _conversationDocumentId = _selectedDocumentId;
                _conversations = await ChatGptService.GetConversationsAsync(userId, tenantId);
            }
            else
            {
                // Update the conversation's prompt ID if it has changed
                var currentConversation = _conversations.FirstOrDefault(c => c.Id == _currentConversationId.Value);
                if (currentConversation != null)
                {
                    if (currentConversation.PromptId != _selectedPromptId)
                    {
                        await ChatGptService.UpdateConversationPromptAsync(_currentConversationId.Value, _selectedPromptId);
                    }
                    
                    // Update document ID if it has changed
                    if (currentConversation.DocumentId != _selectedDocumentId)
                    {
                        var selectedSheets = _selectedSheetNames.Any() ? _selectedSheetNames.ToList() : null;
                        await ChatGptService.UpdateConversationDocumentAsync(_currentConversationId.Value, _selectedDocumentId, selectedSheets);
                        _conversationDocumentId = _selectedDocumentId;
                        // Reload conversations to get updated data
                        _conversations = await ChatGptService.GetConversationsAsync(userId, tenantId);
                    }
                    // Update sheet selection if it has changed
                    else if (_selectedDocumentId.HasValue)
                    {
                        var selectedSheets = _selectedSheetNames.Any() ? _selectedSheetNames.ToList() : null;
                        var savedSheets = currentConversation.SelectedSheetNames != null 
                            ? System.Text.Json.JsonSerializer.Deserialize<List<string>>(currentConversation.SelectedSheetNames) 
                            : null;
                        var sheetsChanged = (selectedSheets == null && savedSheets != null && savedSheets.Any()) ||
                                          (selectedSheets != null && savedSheets == null) ||
                                          (selectedSheets != null && savedSheets != null && 
                                           !selectedSheets.SequenceEqual(savedSheets));
                        if (sheetsChanged)
                        {
                            await ChatGptService.UpdateConversationSheetSelectionAsync(_currentConversationId.Value, selectedSheets);
                            _conversations = await ChatGptService.GetConversationsAsync(userId, tenantId);
                        }
                    }
                }
            }

            // Build conversation history from existing messages
            var conversationMessages = new List<ChatMessage>();
            
            // Get the document if one is associated with this conversation
            Document? conversationDocument = null;
            int? activeDocumentId = _selectedDocumentId ?? _conversationDocumentId;
            
            if (activeDocumentId.HasValue)
            {
                conversationDocument = _availableDocuments.FirstOrDefault(d => d.Id == activeDocumentId.Value);
            }
            
            // Truncate document text if it's too large to avoid token limit errors
            // Model context limit: 8192 tokens
            // Rough estimate: 1 token â‰ˆ 4 characters
            // We'll use 8,000 characters (~2,000 tokens) for document to leave room for:
            // - System prompt (~500-1000 tokens)
            // - Conversation history (~2,500 tokens)
            // - User message (~500 tokens)
            // - Response buffer (~2,000 tokens)
            const int maxDocumentChars = 8000;
            string? documentText = null;
            bool documentTruncated = false;
            
            if (conversationDocument != null)
            {
                // Get selected sheets from conversation or current selection
                List<string>? selectedSheets = null;
                if (_currentConversationId.HasValue)
                {
                    var conversation = _conversations.FirstOrDefault(c => c.Id == _currentConversationId.Value);
                    if (conversation != null && !string.IsNullOrEmpty(conversation.SelectedSheetNames))
                    {
                        try
                        {
                            selectedSheets = System.Text.Json.JsonSerializer.Deserialize<List<string>>(conversation.SelectedSheetNames);
                        }
                        catch { }
                    }
                }
                
                // If no saved selection, use current selection
                if (selectedSheets == null || !selectedSheets.Any())
                {
                    selectedSheets = _selectedSheetNames.Any() ? _selectedSheetNames.ToList() : null;
                }
                
                // Check if this is an Excel file
                var contentType = conversationDocument.ContentType?.ToLower() ?? "";
                var isExcel = contentType.Contains("spreadsheet") || contentType.Contains("excel") || 
                              conversationDocument.FileName.EndsWith(".xlsx", StringComparison.OrdinalIgnoreCase) ||
                              conversationDocument.FileName.EndsWith(".xls", StringComparison.OrdinalIgnoreCase);
                
                if (isExcel && (selectedSheets != null && selectedSheets.Any()))
                {
                    // Extract text from selected sheets only
                    using var fileStream = new MemoryStream(conversationDocument.FileContent);
                    documentText = await DocumentProcessor.ExtractTextFromExcelAsync(fileStream, selectedSheets);
                }
                else if (!string.IsNullOrWhiteSpace(conversationDocument.ExtractedText))
                {
                    // Use the stored extracted text for non-Excel files or when all sheets are selected
                    documentText = conversationDocument.ExtractedText;
                }
                
                // Truncate if needed
                if (!string.IsNullOrWhiteSpace(documentText) && documentText.Length > maxDocumentChars)
                {
                    // Try to truncate at a word boundary for better readability
                    var truncated = documentText.Substring(0, maxDocumentChars);
                    var lastSpace = truncated.LastIndexOfAny(new[] { ' ', '\n', '\r', '\t' });
                    if (lastSpace > maxDocumentChars * 0.9) // Only use word boundary if it's not too far back
                    {
                        truncated = truncated.Substring(0, lastSpace);
                    }
                    
                    documentText = truncated + "\n\n[Document truncated due to size limit. Only the first portion is included.]";
                    documentTruncated = true;
                    
                    // Notify user that document was truncated
                    await NotificationService.ShowWarningAsync(
                        $"The document '{conversationDocument.Title ?? conversationDocument.FileName}' is very large and has been truncated to fit within API limits. Only the first portion is included in the conversation.");
                }
            }
            
            // Always add system prompt if one is selected (like CustomGPT - persists throughout conversation)
            // Use the currently selected prompt (which may have changed)
            if (_selectedPromptId.HasValue)
            {
                var selectedPrompt = _availablePrompts.FirstOrDefault(p => p.Id == _selectedPromptId.Value);
                if (selectedPrompt != null)
                {
                    var promptText = selectedPrompt.PromptText;
                    
                    // If document exists and prompt supports {documentText} placeholder, replace it
                    if (!string.IsNullOrWhiteSpace(documentText) && promptText.Contains("{documentText}"))
                    {
                        promptText = promptText.Replace("{documentText}", documentText);
                    }
                    else if (!string.IsNullOrWhiteSpace(documentText) && !promptText.Contains("{documentText}"))
                    {
                        // If prompt doesn't have placeholder but document exists, append document info to system prompt
                        var truncationNote = documentTruncated ? "\n\nNote: The document content was truncated due to size limitations. Only the first portion is included." : "";
                        promptText = $"{promptText}\n\nYou have access to the following document:\n\nDocument: {conversationDocument!.Title ?? conversationDocument.FileName}\n\nDocument Content:\n{documentText}{truncationNote}";
                    }
                    
                    // Always include the current system prompt in conversation (sent with every request)
                    // This allows changing prompts mid-conversation without clearing history
                    conversationMessages.Add(new ChatMessage
                    {
                        Role = "system",
                        Content = promptText
                    });
                }
            }
            else if (!string.IsNullOrWhiteSpace(documentText))
            {
                // No prompt selected, but document exists - add as system message
                var truncationNote = documentTruncated ? "\n\nNote: The document content was truncated due to size limitations. Only the first portion is included." : "";
                conversationMessages.Add(new ChatMessage
                {
                    Role = "system",
                    Content = $"You have access to the following document:\n\nDocument: {conversationDocument!.Title ?? conversationDocument.FileName}\n\nDocument Content:\n{documentText}{truncationNote}"
                });
            }
            
            // Convert database messages to ChatMessage format
            // Limit conversation history to avoid token limits (keep most recent messages)
            // Model context limit: 8192 tokens
            // Rough estimate: 1 token â‰ˆ 4 characters
            // We'll use 10,000 characters (~2,500 tokens) for conversation history
            // This leaves room for system prompt, document, user message, and response
            const int maxHistoryChars = 10000;
            int totalChars = 0;
            var messagesToInclude = new List<ChatGptMessage>();
            
            // Add messages from newest to oldest until we hit the limit
            for (int i = _messages.Count - 1; i >= 0; i--)
            {
                var msg = _messages[i];
                var msgSize = msg.Content?.Length ?? 0;
                if (totalChars + msgSize > maxHistoryChars)
                {
                    break; // Stop adding messages if we'd exceed the limit
                }
                messagesToInclude.Insert(0, msg); // Insert at beginning to maintain order
                totalChars += msgSize;
            }
            
            foreach (var msg in messagesToInclude)
            {
                conversationMessages.Add(new ChatMessage
                {
                    Role = msg.Role,
                    Content = msg.Content
                });
            }
            
            // Notify user if messages were truncated
            if (messagesToInclude.Count < _messages.Count)
            {
                var truncatedCount = _messages.Count - messagesToInclude.Count;
                await NotificationService.ShowInfoAsync(
                    $"Conversation history was limited to the most recent messages ({truncatedCount} older message(s) excluded) to fit within API limits.");
            }
            
            // Final safety check: Calculate approximate total token count and truncate if needed
            // Estimate total size: system prompt + document + history + user message
            int estimatedTotalChars = conversationMessages.Sum(m => m.Content?.Length ?? 0) + (_messageText?.Length ?? 0);
            int estimatedTokens = estimatedTotalChars / 4; // Rough estimate
            
            // If we're still over ~7500 tokens (leaving buffer), truncate conversation history more aggressively
            if (estimatedTokens > 7500)
            {
                // Remove oldest messages until we're under the limit
                var targetChars = 6000 * 4; // ~6000 tokens worth of characters
                var originalCount = conversationMessages.Count;
                var truncatedMessages = new List<ChatMessage>();
                int currentChars = conversationMessages.Where(m => m.Role == "system").Sum(m => m.Content?.Length ?? 0);
                
                // Keep system message(s)
                truncatedMessages.AddRange(conversationMessages.Where(m => m.Role == "system"));
                
                // Add user/assistant messages from newest to oldest
                var nonSystemMessages = conversationMessages.Where(m => m.Role != "system").ToList();
                for (int i = nonSystemMessages.Count - 1; i >= 0; i--)
                {
                    var msg = nonSystemMessages[i];
                    var msgSize = msg.Content?.Length ?? 0;
                    if (currentChars + msgSize > targetChars)
                    {
                        break;
                    }
                    truncatedMessages.Insert(truncatedMessages.Count, msg);
                    currentChars += msgSize;
                }
                
                conversationMessages = truncatedMessages;
                
                if (conversationMessages.Count < originalCount)
                {
                    await NotificationService.ShowWarningAsync(
                        "Conversation was further truncated to fit within model context limits.");
                }
            }

            // Add the new user message to conversation (without document text - it's already in system prompt)
            var userMessageText = _messageText;
            
            conversationMessages.Add(new ChatMessage
            {
                Role = "user",
                Content = userMessageText
            });

            // Save user message to database
            var userMessage = new ChatGptMessage
            {
                ConversationId = _currentConversationId.Value,
                Role = "user",
                Content = userMessageText
            };
            
            userMessage = await ChatGptService.SaveMessageAsync(userMessage);
            _messages.Add(userMessage);
            
            // Clear input immediately for better UX
            _messageText = string.Empty;
            StateHasChanged();
            await ScrollToBottom();

            // Send full conversation history to ChatGPT (automatically gets API key and model from settings)
            var response = await ChatGptService.SendConversationMessageAsync(userId, tenantId, conversationMessages);

            // Save assistant response to database
            var assistantMessage = new ChatGptMessage
            {
                ConversationId = _currentConversationId.Value,
                Role = "assistant",
                Content = response
            };
            
            assistantMessage = await ChatGptService.SaveMessageAsync(assistantMessage);
            await ChatGptService.UpdateConversationTimestampAsync(_currentConversationId.Value);
            
            _messages.Add(assistantMessage);
            
            // Generate title if this is the first user message (conversation just started)
            // Check if there's only one user message (the one we just added)
            var userMessageCount = _messages.Count(m => m.Role == "user");
            if (userMessageCount == 1 && _currentConversationId.HasValue)
            {
                try
                {
                    var generatedTitle = await ChatGptService.GenerateConversationTitleAsync(userId, tenantId, userMessageText);
                    await ChatGptService.UpdateConversationTitleAsync(_currentConversationId.Value, generatedTitle);
                }
                catch (Exception ex)
                {
                    // Log but don't fail the message send if title generation fails
                    Console.WriteLine($"Failed to generate conversation title: {ex.Message}");
                }
            }
            
            // Reload conversations to update the timestamp and title
            _conversations = await ChatGptService.GetConversationsAsync(userId, tenantId);
            StateHasChanged();
            await ScrollToBottom();
            
            // Refocus the textarea so user can type immediately
            await FocusTextarea();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

