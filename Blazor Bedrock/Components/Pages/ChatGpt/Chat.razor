    private int ParseProgressPercentage(string message)
    {
        if (string.IsNullOrWhiteSpace(message))
            return 0;
        
        // Try to find percentage in format like "50%", "(50%)", "50/100", etc.
        // Look for patterns like "X%" or "(X%)" or "X/Y completed"
        
        // Pattern 1: Look for "X%" in the message
        var percentMatch = System.Text.RegularExpressions.Regex.Match(message, @"(\d+)%");
        if (percentMatch.Success && int.TryParse(percentMatch.Groups[1].Value, out var percent))
        {
            return Math.Clamp(percent, 0, 100);
        }
        
        // Pattern 2: Look for "X/Y completed" or "X of Y"
        var fractionMatch = System.Text.RegularExpressions.Regex.Match(message, @"(\d+)\s*/\s*(\d+)");
        if (fractionMatch.Success && 
            int.TryParse(fractionMatch.Groups[1].Value, out var completed) &&
            int.TryParse(fractionMatch.Groups[2].Value, out var total) &&
            total > 0)
        {
            return Math.Clamp((completed * 100) / total, 0, 100);
        }
        
        // Pattern 3: Look for status-based progress
        if (message.Contains("Starting", StringComparison.OrdinalIgnoreCase) || 
            message.Contains("Uploading", StringComparison.OrdinalIgnoreCase))
        {
            return 10;
        }
        else if (message.Contains("Creating", StringComparison.OrdinalIgnoreCase))
        {
            return 30;
        }
        else if (message.Contains("Processing", StringComparison.OrdinalIgnoreCase))
        {
            return 50;
        }
        else if (message.Contains("successfully", StringComparison.OrdinalIgnoreCase) ||
                 message.Contains("completed", StringComparison.OrdinalIgnoreCase))
        {
            return 100;
        }
        
        // Default: return 0 if we can't parse
        return 0;
    }
    
