@page "/chatgpt/chat"
@using Blazor_Bedrock.Services.ChatGpt
@using Blazor_Bedrock.Services.Tenant
@using Blazor_Bedrock.Services
@using Blazor_Bedrock.Data.Models
@using Blazor_Bedrock.Data
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using ChatMessage = Blazor_Bedrock.Services.ChatGpt.ChatMessage
@inject IChatGptService ChatGptService
@inject IPromptService PromptService
@inject ITenantService TenantService
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation
@inject INotificationService NotificationService
@inject ApplicationDbContext _context
@inject IDatabaseSyncService DbSync
@inject Microsoft.JSInterop.IJSRuntime JSRuntime
@rendermode InteractiveServer
@implements IAsyncDisposable

<PageTitle>ChatGPT Chat</PageTitle>

<style>
    .chat-container {
        height: calc(100vh - 120px);
        min-height: 600px;
        max-height: calc(100vh - 120px);
        overflow: hidden;
        width: 100%;
        box-sizing: border-box;
    }
    
    .conversation-sidebar {
        background: #f8f9fa;
        border-right: 1px solid #dee2e6;
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        width: 100%;
        box-sizing: border-box;
        max-width: 100%;
    }
    
    .conversation-item {
        padding: 12px 16px;
        margin: 4px 8px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: left;
    }
    
    .conversation-item:hover {
        background: #e9ecef;
    }
    
    .conversation-item.active {
        background: #0d6efd;
        color: white;
    }
    
    .message-bubble {
        max-width: 75%;
        padding: 12px 16px;
        border-radius: 18px;
        margin-bottom: 12px;
        word-wrap: break-word;
        line-height: 1.5;
    }
    
    .message-user {
        background: #0d6efd;
        color: white;
        margin-left: auto;
        border-bottom-right-radius: 4px;
    }
    
    .message-assistant {
        background: #f8f9fa;
        color: #212529;
        border: 1px solid #dee2e6;
        margin-right: auto;
        border-bottom-left-radius: 4px;
    }
    
    .message-container {
        display: flex;
        flex-direction: column;
        margin-bottom: 16px;
    }
    
    .message-header {
        font-size: 0.75rem;
        color: #6c757d;
        margin-bottom: 4px;
        padding: 0 4px;
    }
    
    .chat-input-area {
        border-top: 1px solid #dee2e6;
        padding: 12px;
        background: white;
        box-sizing: border-box;
        overflow: hidden;
    }
    
    .messages-container {
        flex: 1;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 20px;
        background: #f8f9fa;
        min-height: 0;
        max-height: 100%;
    }
    
    .chat-main-area {
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }
    
    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: #6c757d;
    }
</style>

<div class="container-fluid p-0" style="height: calc(100vh - 100px); overflow: hidden; position: relative; width: 100%; box-sizing: border-box; margin: 0;">
    @if (!_hasApiKey)
    {
        <div class="container mt-5" style="max-width: 600px;">
            <div class="card shadow text-center">
                <div class="card-body p-5">
                    <i class="bi bi-chat-dots text-warning" style="font-size: 64px;"></i>
                    <h5 class="mt-3 mb-3">ChatGPT Not Configured</h5>
                    <p class="text-muted mb-4">
                        Please configure your OpenAI API key in settings to start chatting.
                    </p>
                    <button class="btn btn-primary btn-lg" @onclick="NavigateToSettings">
                        <i class="bi bi-gear me-2"></i>
                        Configure API Key
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-0" style="height: 100%; flex: 1; min-height: 0; overflow: hidden; display: flex; width: 100%; box-sizing: border-box; margin: 0 !important;">
            @* Sidebar *@
            <div class="col-md-3 p-0" style="height: 100%; overflow: hidden; box-sizing: border-box; max-width: 100%;">
                <div class="conversation-sidebar" style="height: 100%; width: 100%; box-sizing: border-box; overflow: hidden;">
                    <div style="padding: 16px; border-bottom: 1px solid #dee2e6;">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0">Conversations</h6>
                            <button class="btn btn-sm btn-primary" @onclick="CreateNewConversation" title="New Conversation">
                                <i class="bi bi-plus-circle"></i>
                            </button>
                        </div>
                        @if (!string.IsNullOrEmpty(_preferredModel))
                        {
                            <span class="badge bg-info">@_preferredModel</span>
                        }
                    </div>
                    
                    <div style="flex: 1; overflow-y: auto;">
                        @if (_conversations.Any())
                        {
                            @foreach (var conv in _conversations)
                            {
                                <div class="conversation-item @(conv.Id == _currentConversationId ? "active" : "")"
                                     @onclick="() => LoadConversation(conv.Id)">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-chat-bubble me-2"></i>
                                        <div style="flex: 1; min-width: 0;">
                                            <div style="@GetConversationItemStyle(conv.Id)">
                                                @conv.Title
                                            </div>
                                            @if (conv.UpdatedAt.HasValue)
                                            {
                                                <small class="text-muted" style="font-size: 0.7rem;">
                                                    @GetRelativeTime(conv.UpdatedAt.Value)
                                                </small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center p-4 text-muted">
                                <p class="mb-1">No conversations yet</p>
                                <small>Start a new conversation to begin</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            @* Main Chat Area *@
            <div class="col-md-9 p-0" style="height: 100%; display: flex; flex-direction: column; overflow: hidden; width: 100%; box-sizing: border-box; max-width: 100%;">
                <div style="height: 100%; display: flex; flex-direction: column; overflow: hidden; width: 100%; box-sizing: border-box; max-width: 100%;">
                    @* Chat Header *@
                    <div style="padding: 12px 16px; border-bottom: 1px solid #dee2e6; background: white; flex-shrink: 0; box-sizing: border-box; width: 100%; max-width: 100%; overflow: hidden;">
                        <div class="d-flex align-items-center justify-content-between mb-2" style="width: 100%; box-sizing: border-box;">
                            <div style="flex: 1; min-width: 0; overflow: hidden;">
                                <h6 class="mb-0" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    @(_currentConversationId.HasValue ? GetCurrentConversationTitle() : "New Conversation")
                                </h6>
                                @if (!string.IsNullOrEmpty(_preferredModel))
                                {
                                    <small class="text-muted" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        Model: @_preferredModel
                                    </small>
                                }
                            </div>
                            @if (_currentConversationId.HasValue && _messages.Any())
                            {
                                <button class="btn btn-sm btn-outline-danger" @onclick="ClearCurrentConversation" title="Clear Conversation" style="flex-shrink: 0;">
                                    <i class="bi bi-trash"></i>
                                </button>
                            }
                        </div>
                        <div class="d-flex align-items-center mt-2" style="gap: 12px; flex-wrap: wrap; width: 100%; box-sizing: border-box;">
                            <div style="min-width: 200px; max-width: calc(100% - 40px); flex: 1 1 auto; width: auto;">
                                <select class="form-select form-select-sm" value="@_selectedPromptId" @onchange="OnPromptChanged" disabled="@_isLoading">
                                    <option value="">None (Default)</option>
                                    @foreach (var prompt in _availablePrompts)
                                    {
                                        <option value="@prompt.Id">@prompt.Name</option>
                                    }
                                </select>
                            </div>
                            @if (_selectedPromptId.HasValue)
                            {
                                var selectedPrompt = _availablePrompts.FirstOrDefault(p => p.Id == _selectedPromptId.Value);
                                @if (selectedPrompt != null && !string.IsNullOrEmpty(selectedPrompt.Description))
                                {
                                    <span class="text-info" data-bs-toggle="tooltip" data-bs-placement="top" title="@selectedPrompt.Description">
                                        <i class="bi bi-info-circle"></i>
                                    </span>
                                }
                            }
                        </div>
                    </div>
                    
                    @* Messages Area *@
                    <div class="messages-container" @ref="_messagesContainer" style="flex: 1 1 0; min-height: 0; overflow-y: auto; overflow-x: hidden; -webkit-overflow-scrolling: touch;">
                        @if (!_messages.Any())
                        {
                            <div class="empty-state">
                                <i class="bi bi-chat-dots text-muted" style="font-size: 64px; opacity: 0.5; margin-bottom: 16px;"></i>
                                <h6 class="text-muted">Start a conversation</h6>
                                <p class="text-muted mt-2">
                                    Type a message below to begin chatting with ChatGPT
                                </p>
                            </div>
                        }
                        else
                        {
                            @foreach (var message in _messages)
                            {
                                <div class="message-container">
                                    <div class="message-header">
                                        @if (message.Role == "user")
                                        {
                                            <span><i class="bi bi-person me-1" style="font-size: 14px;"></i> You</span>
                                        }
                                        else
                                        {
                                            <span><i class="bi bi-robot me-1" style="font-size: 14px;"></i> Assistant</span>
                                        }
                                        <span style="margin-left: 8px;">@message.CreatedAt.ToString("HH:mm")</span>
                                    </div>
                                    <div class="message-bubble @(message.Role == "user" ? "message-user" : "message-assistant")">
                                        <div style="white-space: pre-wrap;">@message.Content</div>
                                    </div>
                                </div>
                            }
                        }
                        
                        @if (_isLoading)
                        {
                            <div class="message-container">
                                <div class="message-header">
                                    <span><i class="bi bi-robot me-1" style="font-size: 14px;"></i> Assistant</span>
                                </div>
                                <div class="message-bubble message-assistant">
                                    <div class="d-flex align-items-center">
                                        <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                                        <span class="text-muted">Thinking...</span>
                                    </div>
                                </div>
                            </div>
                        }
                        <div id="messages-end"></div>
                    </div>
                    
                    @* Input Area *@
                    <div class="chat-input-area" id="chat-input-container" style="flex-shrink: 0; box-sizing: border-box;">
                        <div style="position: relative; width: 100%; box-sizing: border-box;">
                            <textarea @ref="_messageTextarea"
                                     id="chat-message-textarea"
                                     placeholder="Type your message... (Press Enter to send, Shift+Enter for new line)"
                                     rows="3"
                                     disabled="@_isLoading"
                                     @bind="_messageText"
                                     @bind:event="oninput"
                                     @onkeydown="@HandleKeyDown"
                                     style="width: 100%; max-width: 100%; padding: 12px 45px 12px 12px; border: 1px solid #dee2e6; border-radius: 4px; outline: none; resize: vertical; min-height: 70px; max-height: 200px; font-family: inherit; font-size: 0.875rem; box-sizing: border-box;"
                                     class="form-control"></textarea>
                            <div style="position: absolute; right: 8px; bottom: 8px;">
                                <button class="btn btn-primary btn-sm" 
                                        disabled="@(_isLoading || string.IsNullOrWhiteSpace(_messageText))"
                                        @onclick="SendMessage">
                                    <i class="bi bi-send"></i>
                                </button>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-2">
                            <small class="text-muted">
                                @_messageText.Length characters
                            </small>
                            <small class="text-muted">
                                Enter to send â€¢ Shift+Enter for new line
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool _hasApiKey = false;
    private string? _preferredModel;
    private List<ChatGptConversation> _conversations = new();
    private int? _currentConversationId;
    private List<ChatGptMessage> _messages = new();
    private string _messageText = string.Empty;
    private bool _isLoading = false;
    private ElementReference _messagesContainer;
    private ElementReference _messageTextarea;
    private List<ChatGptPrompt> _availablePrompts = new();
    private int? _selectedPromptId;
    private int? _currentPromptIdForConversation; // Track which prompt is active for current conversation

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User?.Identity?.IsAuthenticated == true)
        {
            var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            var tenantId = TenantService.GetCurrentTenantId();
            
            if (!string.IsNullOrEmpty(userId) && tenantId != null)
            {
                try
                {
                    var apiKey = await ChatGptService.GetDecryptedApiKeyAsync(userId, tenantId);
                    _hasApiKey = true;
                    _preferredModel = await ChatGptService.GetPreferredModelAsync(tenantId);
                    
                    // Load prompts using DbSync to avoid concurrency issues
                    await DbSync.ExecuteAsync(async () =>
                    {
                        _availablePrompts = await PromptService.GetAllPromptsAsync(tenantId);
                    });
                    
                    await LoadConversations();
                }
                catch
                {
                    _hasApiKey = false;
                }
            }
        }
    }

    private Microsoft.JSInterop.DotNetObjectReference<Chat>? _dotNetRef;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                _dotNetRef = Microsoft.JSInterop.DotNetObjectReference.Create(this);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error creating DotNetObjectReference: {ex.Message}");
            }
        }
        
        // Always try to setup the handler (in case textarea was recreated)
        if (_dotNetRef != null)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("setupChatEnterKey", _dotNetRef);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error setting up Enter key handler: {ex.Message}");
            }
        }
        
        // Scroll to bottom after messages update
        await ScrollToBottom();
        
        // Focus textarea on first render if not loading
        if (firstRender && !_isLoading)
        {
            await FocusTextarea();
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey && !_isLoading && !string.IsNullOrWhiteSpace(_messageText))
        {
            await SendMessage();
        }
    }

    [Microsoft.JSInterop.JSInvokable]
    public async Task HandleEnterKey()
    {
        if (!_isLoading && !string.IsNullOrWhiteSpace(_messageText))
        {
            await SendMessage();
        }
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                (function() {
                    var container = document.querySelector('.messages-container');
                    if (container) {
                        container.scrollTo({
                            top: container.scrollHeight,
                            behavior: 'smooth'
                        });
                    }
                })()
            ");
        }
        catch { }
    }
    
    private async Task FocusTextarea()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                (function() {
                    var textarea = document.getElementById('chat-message-textarea');
                    if (textarea) {
                        setTimeout(function() {
                            textarea.focus();
                        }, 100);
                    }
                })()
            ");
        }
        catch { }
    }

    private string GetConversationItemStyle(int conversationId)
    {
        var fontWeight = conversationId == _currentConversationId ? "600" : "400";
        return $"font-weight: {fontWeight}; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;";
    }

    private string GetRelativeTime(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;
        
        if (timeSpan.TotalMinutes < 1)
            return "Just now";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes}m ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours}h ago";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays}d ago";
        
        return dateTime.ToString("MMM d, yyyy");
    }

    private string GetCurrentConversationTitle()
    {
        var conv = _conversations.FirstOrDefault(c => c.Id == _currentConversationId);
        return conv?.Title ?? "Conversation";
    }

    private async Task ClearCurrentConversation()
    {
        if (_currentConversationId.HasValue)
        {
            _messages.Clear();
            _currentConversationId = null;
            // Keep prompt selection but reset conversation tracking
            _currentPromptIdForConversation = _selectedPromptId;
            StateHasChanged();
        }
    }
    
    private async Task CreateNewConversation()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        var tenantId = TenantService.GetCurrentTenantId();
        
        if (!string.IsNullOrEmpty(userId) && tenantId != null)
        {
            var conversation = await ChatGptService.CreateConversationAsync(userId, tenantId, "New Conversation", _preferredModel);
            _currentConversationId = conversation.Id;
            _messages = new();
            // Keep prompt selection for new conversation
            _currentPromptIdForConversation = _selectedPromptId;
            await LoadConversations();
            StateHasChanged();
        }
    }

    public async ValueTask DisposeAsync()
    {
        _dotNetRef?.Dispose();
        await Task.CompletedTask;
    }

    private async Task LoadConversations()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        var tenantId = TenantService.GetCurrentTenantId();
        
        if (!string.IsNullOrEmpty(userId))
        {
            _conversations = await ChatGptService.GetConversationsAsync(userId, tenantId);
            StateHasChanged();
        }
    }

    private async Task LoadConversation(int conversationId)
    {
        _currentConversationId = conversationId;
        await DbSync.ExecuteAsync(async () =>
        {
            _messages = await ChatGptService.GetConversationMessagesAsync(conversationId);
        });
        // Reset prompt selection when loading an existing conversation
        _selectedPromptId = null;
        _currentPromptIdForConversation = null;
        StateHasChanged();
        await ScrollToBottom();
    }
    
    private void OnPromptChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out var promptId))
        {
            _selectedPromptId = promptId;
        }
        else
        {
            _selectedPromptId = null;
        }
        // Update the current prompt for future messages (don't clear conversation)
        _currentPromptIdForConversation = _selectedPromptId;
        StateHasChanged();
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(_messageText) || _isLoading) return;

        _isLoading = true;
        StateHasChanged();
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            var tenantId = TenantService.GetCurrentTenantId();
            
            if (string.IsNullOrEmpty(userId) || tenantId == null)
            {
                await NotificationService.ShowErrorAsync("Unable to identify user or organization. Please log out and log back in.");
                return;
            }

            if (!_currentConversationId.HasValue)
            {
                var newConversation = await ChatGptService.CreateConversationAsync(userId, tenantId, "New Conversation", _preferredModel);
                _currentConversationId = newConversation.Id;
                _messages = new List<ChatGptMessage>();
                // Track the current prompt for this new conversation
                _currentPromptIdForConversation = _selectedPromptId;
                await LoadConversations();
            }

            // Build conversation history from existing messages
            var conversationMessages = new List<ChatMessage>();
            
            // Always add system prompt if one is selected (like CustomGPT - persists throughout conversation)
            // Use the currently selected prompt (which may have changed)
            if (_selectedPromptId.HasValue)
            {
                var selectedPrompt = _availablePrompts.FirstOrDefault(p => p.Id == _selectedPromptId.Value);
                if (selectedPrompt != null)
                {
                    // Always include the current system prompt in conversation (sent with every request)
                    // This allows changing prompts mid-conversation without clearing history
                    conversationMessages.Add(new ChatMessage
                    {
                        Role = "system",
                        Content = selectedPrompt.PromptText
                    });
                }
            }
            
            // Convert database messages to ChatMessage format
            foreach (var msg in _messages)
            {
                conversationMessages.Add(new ChatMessage
                {
                    Role = msg.Role,
                    Content = msg.Content
                });
            }

            // Add the new user message to conversation
            var userMessageText = _messageText;
            conversationMessages.Add(new ChatMessage
            {
                Role = "user",
                Content = userMessageText
            });

            // Save user message to database
            var userMessage = new ChatGptMessage
            {
                ConversationId = _currentConversationId.Value,
                Role = "user",
                Content = userMessageText
            };
            
            await DbSync.ExecuteAsync(async () =>
            {
                _context.ChatGptMessages.Add(userMessage);
                await _context.SaveChangesAsync();
            });
            
            _messages.Add(userMessage);
            
            // Clear input immediately for better UX
            _messageText = string.Empty;
            StateHasChanged();
            await ScrollToBottom();

            // Send full conversation history to ChatGPT (automatically gets API key and model from settings)
            var response = await ChatGptService.SendConversationMessageAsync(userId, tenantId, conversationMessages);

            // Save assistant response to database
            var assistantMessage = new ChatGptMessage
            {
                ConversationId = _currentConversationId.Value,
                Role = "assistant",
                Content = response
            };
            
            await DbSync.ExecuteAsync(async () =>
            {
                _context.ChatGptMessages.Add(assistantMessage);
                
                // Update conversation timestamp
                var existingConversation = await _context.ChatGptConversations.FindAsync(_currentConversationId.Value);
                if (existingConversation != null)
                {
                    existingConversation.UpdatedAt = DateTime.UtcNow;
                }
                
                await _context.SaveChangesAsync();
            });
            
            _messages.Add(assistantMessage);
            await LoadConversations();
            StateHasChanged();
            await ScrollToBottom();
            
            // Refocus the textarea so user can type immediately
            await FocusTextarea();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void NavigateToSettings()
    {
        Navigation.NavigateTo("/chatgpt/settings");
    }
}
