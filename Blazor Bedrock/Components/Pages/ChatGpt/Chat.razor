    private async Task LoadSheetNamesForDocument(Document document)
    {
        var contentType = document.ContentType?.ToLower() ?? "";
        var isExcel = contentType.Contains("spreadsheet") || contentType.Contains("excel") || 
                      document.FileName.EndsWith(".xlsx", StringComparison.OrdinalIgnoreCase) ||
                      document.FileName.EndsWith(".xls", StringComparison.OrdinalIgnoreCase);
        
        if (isExcel)
        {
            _isLoadingSheets = true;
            StateHasChanged();
            
            try
            {
                var authState = await AuthStateProvider.GetAuthenticationStateAsync();
                var userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                var tenantId = TenantService.GetCurrentTenantId();
                
                if (!string.IsNullOrEmpty(userId) && tenantId != null)
                {
                    _availableSheetNames = await DocumentService.GetSheetNamesAsync(document.Id, userId, tenantId.Value);
                    _showSheetSelection = _availableSheetNames.Any();
                    
                    // If we have a conversation with saved sheet selection, restore it
                    if (_currentConversationId.HasValue)
                    {
                        var conversation = _conversations.FirstOrDefault(c => c.Id == _currentConversationId.Value);
                        if (conversation != null && !string.IsNullOrEmpty(conversation.SelectedSheetNames))
                        {
                            try
                            {
                                var savedSheets = System.Text.Json.JsonSerializer.Deserialize<List<string>>(conversation.SelectedSheetNames);
                                if (savedSheets != null)
                                {
                                    _selectedSheetNames = new HashSet<string>(savedSheets.Where(s => _availableSheetNames.Contains(s)));
                                }
                            }
                            catch
                            {
                                // If deserialization fails, select all sheets
                                _selectedSheetNames = new HashSet<string>(_availableSheetNames);
                            }
                        }
                        else
                        {
                            // No saved selection, select all by default
                            _selectedSheetNames = new HashSet<string>(_availableSheetNames);
                        }
                    }
                    else
                    {
                        // No conversation yet, select all by default
                        _selectedSheetNames = new HashSet<string>(_availableSheetNames);
                    }
                }
            }
            catch (Exception ex)
            {
                await NotificationService.ShowErrorAsync($"Error loading sheet names: {ex.Message}");
                _showSheetSelection = false;
            }
            finally
            {
                _isLoadingSheets = false;
            }
        }
        else
        {
            _showSheetSelection = false;
            _availableSheetNames.Clear();
            _selectedSheetNames.Clear();
        }
    }

