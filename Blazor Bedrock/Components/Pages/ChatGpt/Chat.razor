    private async Task ExecuteQuestionToAllDocumentsTogether(ChatGptQuestion question, List<int> documentIds, ChatGptPrompt? prompt, string userId, int? tenantId)
    {
        // Use the current conversation to ask the question to all documents together
        if (!_currentConversationId.HasValue)
            return;
        
        var firstDocId = documentIds.FirstOrDefault();
        var conversation = _conversations.FirstOrDefault(c => c.Id == _currentConversationId.Value);
        if (conversation == null || 
            string.IsNullOrEmpty(conversation.OpenAiThreadId) ||
            string.IsNullOrEmpty(conversation.OpenAiAssistantId))
        {
            await NotificationService.ShowErrorAsync("Current conversation is not ready. Please ensure documents are uploaded.");
            // Remove placeholder on error
            _batchResults.RemoveAll(r => r.IsProcessing && r.QuestionId == question.Id && r.DocumentId == (firstDocId > 0 ? firstDocId : 0) && !r.ResponseId.HasValue);
            return;
        }
        
        // Find the placeholder result
        var placeholder = _batchResults.FirstOrDefault(r => 
            r.DocumentId == (firstDocId > 0 ? firstDocId : 0) && 
            r.QuestionId == question.Id &&
            r.IsProcessing &&
            !r.ResponseId.HasValue);
        
        try
        {
            // Send question to all documents together
            var response = await ChatGptService.SendConversationMessageWithDocumentsAsync(
                userId, tenantId, conversation.Id, question.QuestionText);
            
            // Load conversation messages
            var messages = await ChatGptService.GetConversationMessagesAsync(conversation.Id);
            
            // Update placeholder with actual result
            if (placeholder != null)
            {
                placeholder.Response = response;
                placeholder.ConversationId = conversation.Id;
                placeholder.Messages = messages.OrderBy(m => m.CreatedAt).ToList();
                placeholder.IsProcessing = false;
            }
            else
            {
                // Create new result if placeholder not found
                var result = new BatchResult
                {
                    DocumentId = firstDocId > 0 ? firstDocId : 0,
                    DocumentName = documentIds.Count > 1 ? $"All {documentIds.Count} Documents" : (_availableDocuments.FirstOrDefault(d => d.Id == firstDocId)?.Title ?? "Documents"),
                    QuestionId = question.Id,
                    QuestionText = question.QuestionText,
                    PromptId = prompt?.Id,
                    PromptName = prompt?.Name ?? "Default",
                    Response = response,
                    ConversationId = conversation.Id,
                    Messages = messages.OrderBy(m => m.CreatedAt).ToList(),
                    CreatedAt = DateTime.UtcNow,
                    IsProcessing = false
                };
                _batchResults.Add(result);
                placeholder = result;
            }
            
            // Save response to database (use first document ID or null)
            var questionResponse = new ChatGptQuestionResponse
            {
                ConversationId = conversation.Id,
                QuestionId = question.Id,
                DocumentId = firstDocId > 0 ? firstDocId : null,
                PromptId = prompt?.Id,
                Response = response
            };
            var savedResponse = await QuestionService.SaveResponseAsync(questionResponse);
            placeholder.ResponseId = savedResponse.Id;
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error processing question to all documents together");
            // Update placeholder with error
            if (placeholder != null)
            {
                placeholder.ErrorMessage = ex.Message;
                placeholder.IsProcessing = false;
            }
        }
    }
    
