                    _currentConversationCount = await LimitationService.GetCurrentCountAsync(tenantId, LimitationType.Conversations);
                }
                
                await NotificationService.ShowSuccessAsync("Conversation deleted successfully.");
                StateHasChanged();
            }
            else
            {
                await NotificationService.ShowErrorAsync("Failed to delete conversation. It may have already been deleted.");
            }
        }
