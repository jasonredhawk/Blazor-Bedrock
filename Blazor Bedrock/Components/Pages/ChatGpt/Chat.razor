    private async Task ExecuteQuestion(int questionId)
    {
        if (!_selectedDocumentId.HasValue)
        {
            await NotificationService.ShowErrorAsync("Please select a document first.");
            return;
        }
        
        var question = _allQuestions.FirstOrDefault(q => q.Id == questionId);
        if (question == null)
        {
            await NotificationService.ShowErrorAsync("Question not found.");
            return;
        }
        
        _isLoading = true;
        StateHasChanged();
        
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            var tenantId = TenantService.GetCurrentTenantId();
            
            if (string.IsNullOrEmpty(userId) || tenantId == null)
            {
                await NotificationService.ShowErrorAsync("Unable to identify user or organization.");
                return;
            }
            
            var document = _availableDocuments.FirstOrDefault(d => d.Id == _selectedDocumentId.Value);
            if (document == null)
            {
                await NotificationService.ShowErrorAsync("Document not found.");
                return;
            }
            
            // Check if there's already a conversation with this document and prompt
            var existingConv = _conversations.FirstOrDefault(c => 
                c.DocumentId == _selectedDocumentId.Value && 
                c.PromptId == _selectedPromptId &&
                !string.IsNullOrEmpty(c.OpenAiThreadId) &&
                !string.IsNullOrEmpty(c.OpenAiAssistantId));
            
            ChatGptConversation conversation;
            
            if (existingConv != null)
            {
                // Use existing conversation
                conversation = existingConv;
                await LoadConversation(conversation.Id);
            }
            else
            {
                // Create new conversation with document, prompt, and upload to OpenAI
                var title = $"{question.QuestionText.Substring(0, Math.Min(50, question.QuestionText.Length))}...";
                var progress = new Progress<string>(msg => {
                    _uploadProgress = msg;
                    _uploadProgressPercent = ParseProgressPercentage(msg);
                    StateHasChanged();
                });
                
                _isUploadingDocument = true;
                _uploadProgress = "Creating conversation and uploading document...";
                _uploadProgressPercent = 0;
                
                conversation = await ChatGptService.CreateConversationAsync(
                    userId, tenantId, title, _preferredModel, _selectedPromptId, _selectedDocumentId.Value, null, progress);
                
                _isUploadingDocument = false;
                _uploadProgress = string.Empty;
                _uploadProgressPercent = 0;
                
                // Reload conversations to get the updated one with OpenAI IDs
                _conversations = await ChatGptService.GetConversationsAsync(userId, tenantId);
                conversation = _conversations.FirstOrDefault(c => c.Id == conversation.Id);
                
                // Load the new conversation
                await LoadConversation(conversation.Id);
            }
            
            // Ensure conversation has documents uploaded and prompt is set
            if (conversation != null)
            {
                // Update prompt if needed
                if (conversation.PromptId != _selectedPromptId)
                {
                    await ChatGptService.UpdateConversationPromptAsync(conversation.Id, _selectedPromptId);
                }
                
                // Check if document needs to be uploaded
                if (string.IsNullOrEmpty(conversation.OpenAiThreadId) || 
                    string.IsNullOrEmpty(conversation.OpenAiAssistantId))
                {
                    // Need to upload document
                    _isUploadingDocument = true;
                    _uploadProgress = "Uploading document to OpenAI...";
                    _uploadProgressPercent = 0;
                    StateHasChanged();
                    
                    var uploadProgress = new Progress<string>(msg => {
                        _uploadProgress = msg;
                        _uploadProgressPercent = ParseProgressPercentage(msg);
                        StateHasChanged();
                    });
                    
                    await ChatGptService.UpdateConversationDocumentAsync(
                        conversation.Id, _selectedDocumentId.Value, null, uploadProgress);
                    
                    _isUploadingDocument = false;
                    _uploadProgress = string.Empty;
                    _uploadProgressPercent = 0;
                    
                    // Reload conversations again to get updated OpenAI IDs
                    _conversations = await ChatGptService.GetConversationsAsync(userId, tenantId);
                    conversation = _conversations.FirstOrDefault(c => c.Id == conversation.Id);
                    
                    // Wait a moment for OpenAI to process
                    await Task.Delay(500);
                }
                
                // Reload conversation to ensure we have latest data
                await LoadConversation(conversation.Id);
                
                // Verify conversation is ready (has OpenAI thread and assistant)
                var currentConv = _conversations.FirstOrDefault(c => c.Id == conversation.Id);
                if (currentConv != null && 
                    !string.IsNullOrEmpty(currentConv.OpenAiThreadId) &&
                    !string.IsNullOrEmpty(currentConv.OpenAiAssistantId))
                {
                    // Now send the question using the same method as manual questions
                    _messageText = question.QuestionText;
                    await SendMessage();
                }
                else
                {
                    await NotificationService.ShowErrorAsync("Document upload is still processing. Please wait a moment and try again.");
                }
            }
            
            await NotificationService.ShowSuccessAsync("Question sent successfully!");
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error executing question: {ex.Message}");
            Logger.LogError(ex, "Error executing question {QuestionId}", questionId);
        }
        finally
        {
            _isLoading = false;
            _isUploadingDocument = false;
            _uploadProgress = string.Empty;
            _uploadProgressPercent = 0;
            StateHasChanged();
        }
    }
    
    
    private async Task AskBatchQuestion()
    {
        if (string.IsNullOrWhiteSpace(_batchQuestionText) || _batchResults.Count == 0)
        {
            await NotificationService.ShowErrorAsync("Please enter a question and ensure batch results exist.");
            return;
        }
        
        _isAskingBatchQuestion = true;
        StateHasChanged();
        
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            var tenantId = TenantService.GetCurrentTenantId();
            
            if (string.IsNullOrEmpty(userId) || tenantId == null)
            {
                await NotificationService.ShowErrorAsync("Unable to identify user or organization.");
                return;
            }
            
            var selectedPrompt = _selectedPromptId.HasValue 
                ? _availablePrompts.FirstOrDefault(p => p.Id == _selectedPromptId.Value) 
                : null;
            
            // Group by document only (not by document+question combination)
            // Get one conversation per document (use the first successful result for each document)
            var documents = _batchResults
                .Where(r => string.IsNullOrEmpty(r.ErrorMessage) && r.ConversationId.HasValue)
                .GroupBy(r => r.DocumentId)
                .Select(g => new { DocumentId = g.Key, ConversationId = g.First().ConversationId!.Value })
                .ToList();
            
            var totalDocuments = documents.Count;
            var processedCount = 0;
            
            foreach (var docInfo in documents)
            {
                var document = _availableDocuments.FirstOrDefault(d => d.Id == docInfo.DocumentId);
                
                if (document == null)
                    continue;
                
                // Create a new result for this manual question (no specific question ID for manual questions)
                var manualResult = new BatchResult
                {
                    DocumentId = docInfo.DocumentId,
                    DocumentName = document.Title ?? document.FileName,
                    QuestionId = 0, // Manual question, not from saved questions
                    QuestionText = _batchQuestionText,
                    PromptId = selectedPrompt?.Id,
                    PromptName = selectedPrompt?.Name ?? "Default",
                    IsProcessing = true,
                    CreatedAt = DateTime.UtcNow
                };
                
                _batchResults.Add(manualResult);
                processedCount++;
                StateHasChanged();
                
                try
                {
                    // Send question using the existing conversation for this document
                    var response = await ChatGptService.SendConversationMessageWithDocumentsAsync(
                        userId, tenantId, docInfo.ConversationId, _batchQuestionText);
                    
                    manualResult.Response = response;
                    manualResult.ConversationId = docInfo.ConversationId;
                    manualResult.IsProcessing = false;
                    
                    // Load conversation messages for this result
                    var messages = await ChatGptService.GetConversationMessagesAsync(docInfo.ConversationId);
                    manualResult.Messages = messages.OrderBy(m => m.CreatedAt).ToList();
                    
                    // Save manual question response to database (with QuestionId = 0 to indicate it's a manual question)
                    var questionResponse = new ChatGptQuestionResponse
                    {
                        ConversationId = docInfo.ConversationId,
                        QuestionId = 0, // Manual question, not from saved questions
                        DocumentId = document.Id,
                        PromptId = selectedPrompt?.Id,
                        Response = response
                    };
                    var savedResponse = await QuestionService.SaveResponseAsync(questionResponse);
                    manualResult.ResponseId = savedResponse.Id; // Store the database ID for deletion
                }
                catch (Exception ex)
                {
                    manualResult.ErrorMessage = ex.Message;
                    manualResult.IsProcessing = false;
                    Logger.LogError(ex, "Error asking batch question for document {DocumentId}", document.Id);
                }
                
                StateHasChanged();
            }
            
            await NotificationService.ShowSuccessAsync($"Question sent to {processedCount} document(s) successfully.");
            _batchQuestionText = string.Empty; // Clear the input
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error asking batch question: {ex.Message}");
            Logger.LogError(ex, "Error in AskBatchQuestion");
        }
        finally
        {
            _isAskingBatchQuestion = false;
            StateHasChanged();
        }
    }
    
