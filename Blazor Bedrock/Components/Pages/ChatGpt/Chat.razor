                }
            }
        }
        else if (conversation.DocumentId.HasValue)
        {
            documentIds.Add(conversation.DocumentId.Value);
        }
        
        return documentIds;
    }
    
    private async Task ExecuteQuestionToDocuments(int questionId, bool askToAllTogether)
    {
        if (!_currentConversationId.HasValue)
        {
            await NotificationService.ShowErrorAsync("Please load a conversation with documents first.");
            return;
        }
        
        var question = _allQuestions.FirstOrDefault(q => q.Id == questionId);
        if (question == null)
        {
            await NotificationService.ShowErrorAsync("Question not found.");
            return;
        }
        
        var conversationDocuments = GetConversationDocuments();
        if (!conversationDocuments.Any())
        {
            await NotificationService.ShowErrorAsync("No documents found in the current conversation. Please upload documents first.");
            return;
        }
        
        var selectedPrompt = _selectedPromptId.HasValue 
            ? _availablePrompts.FirstOrDefault(p => p.Id == _selectedPromptId.Value) 
            : null;
        
        // Immediately create placeholder results for instant UI feedback
        // Do this synchronously before any async operations
        if (askToAllTogether)
        {
            // Create one placeholder for "all documents together"
            var firstDocId = conversationDocuments.FirstOrDefault();
            var placeholder = new BatchResult
            {
                DocumentId = firstDocId > 0 ? firstDocId : 0,
                DocumentName = conversationDocuments.Count > 1 ? $"All {conversationDocuments.Count} Documents" : (_availableDocuments.FirstOrDefault(d => d.Id == firstDocId)?.Title ?? "Documents"),
                QuestionId = question.Id,
                QuestionText = question.QuestionText,
                PromptId = selectedPrompt?.Id,
                PromptName = selectedPrompt?.Name ?? "Default",
                IsProcessing = true,
                CreatedAt = DateTime.UtcNow
            };
            _batchResults.Add(placeholder);
        }
        else
        {
            // Create placeholders for each document
            var documents = _availableDocuments.Where(d => conversationDocuments.Contains(d.Id)).ToList();
            foreach (var document in documents)
            {
                // Check if this result already exists
                var existingResult = _batchResults.FirstOrDefault(r => 
                    r.DocumentId == document.Id && 
                    r.QuestionId == question.Id &&
                    !r.IsProcessing &&
                    string.IsNullOrEmpty(r.ErrorMessage) &&
                    !string.IsNullOrEmpty(r.Response) &&
                    r.ResponseId.HasValue);
                
                if (existingResult != null)
                {
                    continue; // Skip if already processed
                }
                
                var placeholder = new BatchResult
                {
                    DocumentId = document.Id,
                    DocumentName = document.Title ?? document.FileName,
                    QuestionId = question.Id,
                    QuestionText = question.QuestionText,
                    PromptId = selectedPrompt?.Id,
                    PromptName = selectedPrompt?.Name ?? "Default",
                    IsProcessing = true,
                    CreatedAt = DateTime.UtcNow
                };
                _batchResults.Add(placeholder);
            }
        }
        
        _isProcessing = true;
        // Force immediate UI update before async operations - use synchronous call
        StateHasChanged();
        
        // Give UI time to render placeholders before starting async work
        await Task.Delay(10);
        
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            var tenantId = TenantService.GetCurrentTenantId();
            
            if (string.IsNullOrEmpty(userId) || tenantId == null)
            {
                await NotificationService.ShowErrorAsync("Unable to identify user or organization.");
                // Remove placeholders on error
                _batchResults.RemoveAll(r => r.IsProcessing && r.QuestionId == question.Id && !r.ResponseId.HasValue);
                return;
            }
            
            if (askToAllTogether)
            {
                // Ask question to all documents together
                await ExecuteQuestionToAllDocumentsTogether(question, conversationDocuments, selectedPrompt, userId, tenantId);
            }
            else
            {
                // Ask question to each document separately
                await ExecuteQuestionToEachDocument(question, conversationDocuments, selectedPrompt, userId, tenantId);
            }
            
            // Reload existing results
            await LoadExistingBatchResults();
            
            await NotificationService.ShowSuccessAsync("Question processed successfully!");
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error processing question: {ex.Message}");
            Logger.LogError(ex, "Error executing question {QuestionId} to documents", questionId);
        }
        finally
        {
            _isProcessing = false;
            StateHasChanged();
        }
    }
    
    private async Task ExecuteQuestionToEachDocument(ChatGptQuestion question, List<int> documentIds, ChatGptPrompt? prompt, string userId, int? tenantId)
    {
        var documents = _availableDocuments.Where(d => documentIds.Contains(d.Id)).ToList();
        
        foreach (var document in documents)
        {
            // Find the placeholder result for this document
            var placeholder = _batchResults.FirstOrDefault(r => 
                r.DocumentId == document.Id && 
                r.QuestionId == question.Id &&
                r.IsProcessing &&
                !r.ResponseId.HasValue);
            
            try
            {
                // Find or create conversation for this document
                ChatGptConversation? conversation = null;
                
                var existingConv = _conversations.FirstOrDefault(c => 
                    c.DocumentId == document.Id && 
                    !string.IsNullOrEmpty(c.OpenAiThreadId) &&
                    !string.IsNullOrEmpty(c.OpenAiAssistantId));
                
                if (existingConv != null)
                {
                    conversation = existingConv;
                }
                else
                {
                    // Create new conversation with document
                    var title = $"{document.Title ?? document.FileName} - {question.QuestionText.Substring(0, Math.Min(50, question.QuestionText.Length))}...";
                    var progress = new Progress<string>(msg => {
                        StateHasChanged();
                    });
                    
                    conversation = await ChatGptService.CreateConversationAsync(
                        userId, tenantId, title, _preferredModel, prompt?.Id, document.Id, null, progress);
                    
                    // Reload conversations
                    _conversations = await ChatGptService.GetConversationsAsync(userId, tenantId);
                    conversation = _conversations.FirstOrDefault(c => c.Id == conversation.Id);
                }
                
                if (conversation != null && 
                    !string.IsNullOrEmpty(conversation.OpenAiThreadId) &&
                    !string.IsNullOrEmpty(conversation.OpenAiAssistantId))
                {
                    // Send question
                    var response = await ChatGptService.SendConversationMessageWithDocumentsAsync(
                        userId, tenantId, conversation.Id, question.QuestionText);
                    
                    // Load conversation messages
                    var messages = await ChatGptService.GetConversationMessagesAsync(conversation.Id);
                    
                    // Update placeholder with actual result
                    if (placeholder != null)
                    {
                        placeholder.Response = response;
                        placeholder.ConversationId = conversation.Id;
                        placeholder.Messages = messages.OrderBy(m => m.CreatedAt).ToList();
                        placeholder.IsProcessing = false;
                    }
                    else
                    {
                        // Create new result if placeholder not found
                        var result = new BatchResult
                        {
                            DocumentId = document.Id,
                            DocumentName = document.Title ?? document.FileName,
                            QuestionId = question.Id,
                            QuestionText = question.QuestionText,
                            PromptId = prompt?.Id,
                            PromptName = prompt?.Name ?? "Default",
                            Response = response,
                            ConversationId = conversation.Id,
                            Messages = messages.OrderBy(m => m.CreatedAt).ToList(),
                            CreatedAt = DateTime.UtcNow,
                            IsProcessing = false
                        };
                        _batchResults.Add(result);
                        placeholder = result;
                    }
                    
                    // Save response to database
                    var questionResponse = new ChatGptQuestionResponse
                    {
                        ConversationId = conversation.Id,
                        QuestionId = question.Id,
                        DocumentId = document.Id,
                        PromptId = prompt?.Id,
                        Response = response
                    };
                    var savedResponse = await QuestionService.SaveResponseAsync(questionResponse);
                    placeholder.ResponseId = savedResponse.Id;
                    
                    StateHasChanged();
                }
                else
                {
                    // Update placeholder with error
                    if (placeholder != null)
                    {
                        placeholder.ErrorMessage = "Failed to upload document to OpenAI. Please try uploading manually first.";
                        placeholder.IsProcessing = false;
                    }
                }
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error processing question for document {DocumentId}", document.Id);
