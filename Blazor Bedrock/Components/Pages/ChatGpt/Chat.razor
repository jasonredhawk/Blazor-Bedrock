@page "/chatgpt/chat"
@using Blazor_Bedrock.Services.ChatGpt
@using Blazor_Bedrock.Services.Tenant
@using Blazor_Bedrock.Services
@using Blazor_Bedrock.Services.Document
@using Blazor_Bedrock.Services.Subscription
@using Blazor_Bedrock.Services.FeatureFlag
@using Blazor_Bedrock.Data.Models
@using Blazor_Bedrock.Data
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using ChatMessage = Blazor_Bedrock.Services.ChatGpt.ChatMessage
@inject IChatGptService ChatGptService
@inject IPromptService PromptService
@inject ITenantService TenantService
@inject IDocumentService DocumentService
@inject ISubscriptionLimitationService LimitationService
@inject IFeatureFlagService FeatureFlagService
@inject Blazor_Bedrock.Infrastructure.ExternalApis.IDocumentProcessor DocumentProcessor
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation
@inject INotificationService NotificationService
@inject Microsoft.JSInterop.IJSRuntime JSRuntime
@rendermode InteractiveServer
@implements IAsyncDisposable

<PageTitle>ChatGPT Chat</PageTitle>

<style>
    .chat-container {
        height: 100%;
        overflow: hidden;
        width: 100%;
        box-sizing: border-box;
    }
    
    .chat-page-container {
        transition: height 0.2s ease;
    }
    
    .conversation-sidebar {
        background: #f8f9fa;
        border-right: 1px solid #dee2e6;
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        width: 100%;
        box-sizing: border-box;
        max-width: 100%;
    }
    
    .conversation-item {
        padding: 12px 16px;
        margin: 4px 8px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: left;
    }
    
    .conversation-item:hover {
        background: #e9ecef;
    }
    
    .conversation-item:hover .btn-link {
        opacity: 1 !important;
    }
    
    .conversation-item.active {
        background: #0d6efd;
        color: white;
    }
    
    .conversation-item.active:hover .btn-link {
        color: #ffc107 !important;
    }
    
    .message-bubble {
        max-width: 75%;
        padding: 12px 16px;
        border-radius: 18px;
        margin-bottom: 12px;
        word-wrap: break-word;
        line-height: 1.5;
    }
    
    .message-user {
        background: #0d6efd;
        color: white;
        margin-left: auto;
        border-bottom-right-radius: 4px;
    }
    
    .message-assistant {
        background: #f8f9fa;
        color: #212529;
        border: 1px solid #dee2e6;
        margin-right: auto;
        border-bottom-left-radius: 4px;
    }
    
    .message-container {
        display: flex;
        flex-direction: column;
        margin-bottom: 16px;
    }
    
    .message-header {
        font-size: 0.75rem;
        color: #6c757d;
        margin-bottom: 4px;
        padding: 0 4px;
    }
    
    .chat-input-area {
        border-top: 1px solid #dee2e6;
        padding: 12px;
        background: white;
        box-sizing: border-box;
        overflow: hidden;
    }
    
    .messages-container {
        /* This is the ONLY scrollable area */
        flex: 1 1 0;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 20px;
        background: #f8f9fa;
        min-height: 0;
        /* Critical: allows flex item to shrink below content size */
    }
    
    .chat-main-area {
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }
    
    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: #6c757d;
    }
</style>

<div class="container-fluid p-0 chat-page-container" style="height: calc(100vh - 56px - var(--logger-height, 0px) - 32px); max-height: calc(100vh - 56px - var(--logger-height, 0px) - 32px); overflow: hidden; position: relative; width: 100%; box-sizing: border-box; margin: 0; margin-top: -1.5rem; display: flex; flex-direction: column;">
    @if (!_hasApiKey)
    {
        <div class="container mt-5" style="max-width: 600px;">
            <div class="card shadow text-center">
                <div class="card-body p-5">
                    <i class="bi bi-chat-dots text-warning" style="font-size: 64px;"></i>
                    <h5 class="mt-3 mb-3">ChatGPT Not Configured</h5>
                    <p class="text-muted mb-4">
                        Please configure your OpenAI API key in settings to start chatting.
                    </p>
                    <button class="btn btn-primary btn-lg" @onclick="NavigateToSettings">
                        <i class="bi bi-gear me-2"></i>
                        Configure API Key
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-0" style="height: 100%; max-height: 100%; flex: 1; min-height: 0; overflow: hidden; display: flex; width: 100%; box-sizing: border-box; margin: 0 !important; flex-grow: 1;">
            @* Sidebar *@
            <div class="col-md-3 p-0" style="height: 100%; max-height: 100%; overflow: hidden; box-sizing: border-box; max-width: 100%; display: flex; flex-direction: column;">
                <div class="conversation-sidebar" style="height: 100%; max-height: 100%; width: 100%; box-sizing: border-box; overflow: hidden; display: flex; flex-direction: column;">
                    <div style="padding: 16px; border-bottom: 1px solid #dee2e6;">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0">Conversations</h6>
                            <button class="btn btn-sm btn-primary" @onclick="CreateNewConversation" title="New Conversation">
                                <i class="bi bi-plus-circle"></i>
                            </button>
                        </div>
                        @if (!string.IsNullOrEmpty(_preferredModel))
                        {
                            <span class="badge bg-info">@_preferredModel</span>
                        }
                        @* Subscription Limitation Counter *@
                        @if (_subscriptionsEnabled && _conversationLimitations != null)
                        {
                            <div class="mt-2">
                                <div class="d-flex align-items-center">
                                    <span class="text-muted me-2" style="font-size: 0.875rem;">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Conversations:
                                    </span>
                                    @if (_maxConversations.HasValue)
                                    {
                                        <span class="@GetConversationBadgeClass()" style="font-size: 0.875rem;">
                                            @_currentConversationCount / @_maxConversations
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success" style="font-size: 0.875rem;">
                                            @_currentConversationCount (Unlimited)
                                        </span>
                                    }
                                </div>
                                @if (_maxConversations.HasValue)
                                {
                                    @if (_currentConversationCount >= _maxConversations)
                                    {
                                        <div class="alert alert-warning alert-sm mt-2 mb-0 py-1" style="font-size: 0.75rem;">
                                            <small><i class="bi bi-exclamation-triangle me-1"></i>Limit reached.</small>
                                        </div>
                                    }
                                    else if (_currentConversationCount >= _maxConversations * 0.9)
                                    {
                                        <div class="alert alert-info alert-sm mt-2 mb-0 py-1" style="font-size: 0.75rem;">
                                            <small><i class="bi bi-info-circle me-1"></i>Approaching limit.</small>
                                        </div>
                                    }
                                }
                            </div>
                        }
                    </div>
                    
                    <div style="flex: 1 1 auto; min-height: 0; overflow-y: auto; overflow-x: hidden;">
                        @if (_conversations.Any())
                        {
                            @foreach (var conv in _conversations)
                            {
                                <div class="conversation-item @(conv.Id == _currentConversationId ? "active" : "")"
                                     @onclick="() => LoadConversation(conv.Id)">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center" style="flex: 1; min-width: 0;">
                                            <i class="bi bi-chat-bubble me-2"></i>
                                            <div style="flex: 1; min-width: 0;">
                                                <div style="@GetConversationItemStyle(conv.Id)">
                                                    @conv.Title
                                                </div>
                                                @if (conv.UpdatedAt.HasValue)
                                                {
                                                    <small class="text-muted" style="font-size: 0.7rem;">
                                                        @GetRelativeTime(conv.UpdatedAt.Value)
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                        <button class="btn btn-sm btn-link text-danger p-1 ms-2" 
                                                @onclick:stopPropagation="true"
                                                @onclick="() => DeleteConversation(conv.Id)"
                                                title="Delete conversation"
                                                style="flex-shrink: 0; opacity: 0.7; transition: opacity 0.2s;">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center p-4 text-muted">
                                <p class="mb-1">No conversations yet</p>
                                <small>Start a new conversation to begin</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            @* Main Chat Area *@
            <div class="col-md-9 p-0" style="height: 100%; max-height: 100%; display: flex; flex-direction: column; overflow: hidden; width: 100%; box-sizing: border-box; max-width: 100%; flex: 1; min-height: 0;">
                <div style="height: 100%; max-height: 100%; display: flex; flex-direction: column; overflow: hidden; width: 100%; box-sizing: border-box; max-width: 100%; flex: 1; min-height: 0;">
                    @* Chat Header - Fixed at top *@
                    <div style="padding: 12px 16px; border-bottom: 1px solid #dee2e6; background: white; flex: 0 0 auto; box-sizing: border-box; width: 100%; max-width: 100%; overflow: hidden;">
                        <div class="d-flex align-items-center justify-content-between mb-2" style="width: 100%; box-sizing: border-box;">
                            <div style="flex: 1; min-width: 0; overflow: hidden;">
                                <h6 class="mb-0" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    @(_currentConversationId.HasValue ? GetCurrentConversationTitle() : "New Conversation")
                                </h6>
                                @if (!string.IsNullOrEmpty(_preferredModel))
                                {
                                    <small class="text-muted" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        Model: @_preferredModel
                                    </small>
                                }
                                @if (_currentConversationId.HasValue && _conversationLimitations?.MaxQueriesPerConversation.HasValue == true)
                                {
                                    var userMessageCount = _messages.Count(m => m.Role == "user");
                                    var maxQueries = _conversationLimitations.MaxQueriesPerConversation.Value;
                                    <small class="@GetQueriesLimitClass(userMessageCount, maxQueries)" style="display: block; margin-top: 4px;">
                                        <i class="bi bi-chat-dots me-1"></i>
                                        Messages: @userMessageCount / @maxQueries
                                    </small>
                                }
                            </div>
                            @if (_currentConversationId.HasValue && _messages.Any())
                            {
                                <button class="btn btn-sm btn-outline-danger" @onclick="ClearCurrentConversation" title="Clear Conversation" style="flex-shrink: 0;">
                                    <i class="bi bi-trash"></i>
                                </button>
                            }
                        </div>
                        <div class="d-flex align-items-center mt-2" style="gap: 12px; flex-wrap: wrap; width: 100%; box-sizing: border-box;">
                            <div style="min-width: 200px; max-width: calc(100% - 40px); flex: 1 1 auto; width: auto;">
                                <select class="form-select form-select-sm" value="@_selectedPromptId" @onchange="OnPromptChanged" disabled="@_isLoading">
                                    <option value="">None (Default)</option>
                                    @foreach (var prompt in _availablePrompts)
                                    {
                                        <option value="@prompt.Id">@prompt.Name</option>
                                    }
                                </select>
                            </div>
                            @if (_selectedPromptId.HasValue)
                            {
                                var selectedPrompt = _availablePrompts.FirstOrDefault(p => p.Id == _selectedPromptId.Value);
                                @if (selectedPrompt != null && !string.IsNullOrEmpty(selectedPrompt.Description))
                                {
                                    <span class="text-info" data-bs-toggle="tooltip" data-bs-placement="top" title="@selectedPrompt.Description">
                                        <i class="bi bi-info-circle"></i>
                                    </span>
                                }
                            }
                        </div>
                        <div class="d-flex align-items-center mt-2" style="gap: 12px; flex-wrap: wrap; width: 100%; box-sizing: border-box;">
                            <div style="min-width: 200px; max-width: calc(100% - 40px); flex: 1 1 auto; width: auto;">
                                <select class="form-select form-select-sm" value="@_selectedDocumentId" @onchange="OnDocumentChanged" disabled="@_isLoading">
                                    <option value="">No Document</option>
                                    @foreach (var doc in _availableDocuments)
                                    {
                                        <option value="@doc.Id">@(doc.Title ?? doc.FileName)</option>
                                    }
                                </select>
                            </div>
                            @if (_selectedDocumentId.HasValue || _conversationDocumentId.HasValue)
                            {
                                var docId = _selectedDocumentId ?? _conversationDocumentId;
                                var selectedDoc = _availableDocuments.FirstOrDefault(d => d.Id == docId);
                                @if (selectedDoc != null)
                                {
                                    <span class="badge bg-info" title="@selectedDoc.FileName">
                                        <i class="bi bi-file-earmark me-1"></i>@(selectedDoc.Title ?? selectedDoc.FileName)
                                    </span>
                                    @if (!_isLoading && _currentConversationId.HasValue)
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="ClearSelectedDocument" title="Remove document from conversation">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    }
                                }
                            }
                        </div>
                        @* Sheet Selection UI for Excel files *@
                        @if (_showSheetSelection && _availableSheetNames.Any())
                        {
                            <div class="mt-2 p-2 border rounded" style="background-color: #f8f9fa;">
                                <div class="d-flex align-items-center justify-content-between mb-2">
                                    <small class="fw-bold text-muted">
                                        <i class="bi bi-table me-1"></i>Select Spreadsheet Sheets:
                                    </small>
                                    <div>
                                        <button class="btn btn-sm btn-link p-0 me-2" @onclick="SelectAllSheets" style="font-size: 0.75rem;">
                                            Select All
                                        </button>
                                        <button class="btn btn-sm btn-link p-0" @onclick="DeselectAllSheets" style="font-size: 0.75rem;">
                                            Deselect All
                                        </button>
                                    </div>
                                </div>
                                <div class="d-flex flex-wrap gap-2" style="max-height: 120px; overflow-y: auto;">
                                    @foreach (var sheetName in _availableSheetNames)
                                    {
                                        <label class="form-check-label d-flex align-items-center" style="cursor: pointer; font-size: 0.8rem;">
                                            <input type="checkbox" 
                                                   class="form-check-input me-1" 
                                                   checked="@_selectedSheetNames.Contains(sheetName)"
                                                   @onchange="@((ChangeEventArgs e) => ToggleSheetSelection(sheetName, (bool)(e.Value ?? false)))" />
                                            <span>@sheetName</span>
                                        </label>
                                    }
                                </div>
                                @if (_selectedSheetNames.Any())
                                {
                                    <small class="text-muted d-block mt-2">
                                        <i class="bi bi-check-circle me-1"></i>
                                        @_selectedSheetNames.Count of @_availableSheetNames.Count sheet(s) selected
                                    </small>
                                }
                                else
                                {
                                    <small class="text-warning d-block mt-2">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        No sheets selected. All sheets will be included.
                                    </small>
                                }
                            </div>
                        }
                    </div>
                    
                    @* Messages Area - Only scrollable area *@
                    <div class="messages-container" @ref="_messagesContainer" style="flex: 1 1 0; min-height: 0; max-height: 100%; overflow-y: auto; overflow-x: hidden; -webkit-overflow-scrolling: touch;">
                        @if (!_messages.Any())
                        {
                            <div class="empty-state">
                                <i class="bi bi-chat-dots text-muted" style="font-size: 64px; opacity: 0.5; margin-bottom: 16px;"></i>
                                <h6 class="text-muted">Start a conversation</h6>
                                <p class="text-muted mt-2">
                                    Type a message below to begin chatting with ChatGPT
                                </p>
                            </div>
                        }
                        else
                        {
                            @foreach (var message in _messages)
                            {
                                <div class="message-container">
                                    <div class="message-header">
                                        @if (message.Role == "user")
                                        {
                                            <span><i class="bi bi-person me-1" style="font-size: 14px;"></i> You</span>
                                        }
                                        else
                                        {
                                            <span><i class="bi bi-robot me-1" style="font-size: 14px;"></i> Assistant</span>
                                        }
                                        <span style="margin-left: 8px;">@message.CreatedAt.ToString("HH:mm")</span>
                                    </div>
                                    <div class="message-bubble @(message.Role == "user" ? "message-user" : "message-assistant")">
                                        <div style="white-space: pre-wrap;">@message.Content</div>
                                    </div>
                                </div>
                            }
                        }
                        
                        @if (_isLoading)
                        {
                            <div class="message-container">
                                <div class="message-header">
                                    <span><i class="bi bi-robot me-1" style="font-size: 14px;"></i> Assistant</span>
                                </div>
                                <div class="message-bubble message-assistant">
                                    <div class="d-flex align-items-center">
                                        <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                                        <span class="text-muted">Thinking...</span>
                                    </div>
                                </div>
                            </div>
                        }
                        <div id="messages-end"></div>
                    </div>
                    
                    @* Input Area - Fixed at bottom, never scrolls *@
                    <div class="chat-input-area" id="chat-input-container" style="flex: 0 0 auto; box-sizing: border-box; background: white; border-top: 1px solid #dee2e6; z-index: 10;">
                        <div style="position: relative; width: 100%; box-sizing: border-box;">
                            <textarea @ref="_messageTextarea"
                                     id="chat-message-textarea"
                                     placeholder="Type your message... (Press Enter to send, Shift+Enter for new line)"
                                     rows="3"
                                     disabled="@_isLoading"
                                     @bind="_messageText"
                                     @bind:event="oninput"
                                     @onkeydown="@HandleKeyDown"
                                     style="width: 100%; max-width: 100%; padding: 12px 45px 12px 12px; border: 1px solid #dee2e6; border-radius: 4px; outline: none; resize: vertical; min-height: 70px; max-height: 200px; font-family: inherit; font-size: 0.875rem; box-sizing: border-box;"
                                     class="form-control"></textarea>
                            <div style="position: absolute; right: 8px; bottom: 8px;">
                                <button class="btn btn-primary btn-sm" 
                                        disabled="@(_isLoading || string.IsNullOrWhiteSpace(_messageText))"
                                        @onclick="SendMessage">
                                    <i class="bi bi-send"></i>
                                </button>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-2">
                            <small class="text-muted">
                                @_messageText.Length characters
                            </small>
                            <small class="text-muted">
                                Enter to send â€¢ Shift+Enter for new line
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool _hasApiKey = false;
    private string? _preferredModel;
    private List<ChatGptConversation> _conversations = new();
    private int? _currentConversationId;
    private List<ChatGptMessage> _messages = new();
    private string _messageText = string.Empty;
    private bool _isLoading = false;
    private ElementReference _messagesContainer;
    private ElementReference _messageTextarea;
    private List<ChatGptPrompt> _availablePrompts = new();
    private int? _selectedPromptId;
    private int? _currentPromptIdForConversation; // Track which prompt is active for current conversation
    private List<Document> _availableDocuments = new();
    private int? _selectedDocumentId;
    private int? _conversationDocumentId; // Track which document is associated with the current conversation
    private List<string> _availableSheetNames = new();
    private HashSet<string> _selectedSheetNames = new();
    private bool _isLoadingSheets = false;
    private bool _showSheetSelection = false;
    private SubscriptionLimitations? _conversationLimitations;
    private bool _subscriptionsEnabled = false;
    private int _currentConversationCount = 0;
    private int? _maxConversations;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User?.Identity?.IsAuthenticated == true)
        {
            var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            var tenantId = TenantService.GetCurrentTenantId();
            
            if (!string.IsNullOrEmpty(userId) && tenantId != null)
            {
                try
                {
                    // All service methods now handle DbSync internally
                    var apiKey = await ChatGptService.GetDecryptedApiKeyAsync(userId, tenantId);
                    _hasApiKey = true;
                    _preferredModel = await ChatGptService.GetPreferredModelAsync(tenantId);
                    
                    // Load prompts (only Chat type for chat page)
                    _availablePrompts = await PromptService.GetAllPromptsAsync(tenantId, PromptType.Chat);
                    
                    // Load conversations
                    _conversations = await ChatGptService.GetConversationsAsync(userId, tenantId);
                    
                    // Load documents
                    _availableDocuments = await DocumentService.GetAllDocumentsAsync(userId, tenantId.Value);
                    
                    // Load subscription limitations
                    _subscriptionsEnabled = await FeatureFlagService.IsEnabledAsync("Subscriptions");
                    if (_subscriptionsEnabled)
                    {
                        _conversationLimitations = await LimitationService.GetTenantLimitationsAsync(tenantId);
                        _currentConversationCount = await LimitationService.GetCurrentCountAsync(tenantId, LimitationType.Conversations);
                        _maxConversations = _conversationLimitations?.MaxConversations;
                    }
                    
                    // Check for documentId in query string
                    var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
                    if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("documentId", out var docIdValue))
                    {
                        if (int.TryParse(docIdValue.FirstOrDefault(), out var docId))
                        {
                            _selectedDocumentId = docId;
                            _conversationDocumentId = docId; // Set this so it's tracked for the conversation
                        }
                    }
                }
                catch
                {
                    _hasApiKey = false;
                }
            }
        }
    }

    private Microsoft.JSInterop.DotNetObjectReference<Chat>? _dotNetRef;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                _dotNetRef = Microsoft.JSInterop.DotNetObjectReference.Create(this);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error creating DotNetObjectReference: {ex.Message}");
            }
        }
        
        // Always try to setup the handler (in case textarea was recreated)
        if (_dotNetRef != null)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("setupChatEnterKey", _dotNetRef);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error setting up Enter key handler: {ex.Message}");
            }
        }
        
        // Scroll to bottom after messages update
        await ScrollToBottom();
        
        // Focus textarea on first render if not loading
        if (firstRender && !_isLoading)
        {
            await FocusTextarea();
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey && !_isLoading && !string.IsNullOrWhiteSpace(_messageText))
        {
            await SendMessage();
        }
    }

    [Microsoft.JSInterop.JSInvokable]
    public async Task HandleEnterKey()
    {
        if (!_isLoading && !string.IsNullOrWhiteSpace(_messageText))
        {
            await SendMessage();
        }
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                (function() {
                    var container = document.querySelector('.messages-container');
                    if (container) {
                        container.scrollTo({
                            top: container.scrollHeight,
                            behavior: 'smooth'
                        });
                    }
                })()
            ");
        }
        catch { }
    }
    
    private async Task FocusTextarea()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", @"
                (function() {
                    var textarea = document.getElementById('chat-message-textarea');
                    if (textarea) {
                        setTimeout(function() {
                            textarea.focus();
                        }, 100);
                    }
                })()
            ");
        }
        catch { }
    }

    private string GetConversationItemStyle(int conversationId)
