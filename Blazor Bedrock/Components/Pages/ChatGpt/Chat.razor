    private string GetQueriesLimitClass(int currentCount, int maxCount)
    {
        var percentage = (double)currentCount / maxCount;
        return percentage >= 1.0 
            ? "text-danger fw-bold" 
            : percentage >= 0.9 
                ? "text-warning" 
                : "text-muted";
    }

    private string GetConversationBadgeClass()
    {
        if (!_maxConversations.HasValue) return "badge bg-secondary";
        
        var percentage = (double)_currentConversationCount / _maxConversations.Value;
        return percentage >= 1.0 
            ? "badge bg-danger" 
            : percentage >= 0.9 
                ? "badge bg-warning" 
                : "badge bg-success";
    }
