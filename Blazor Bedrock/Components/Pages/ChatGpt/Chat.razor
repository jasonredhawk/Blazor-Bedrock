    private async Task LoadExistingBatchResults()
    {
        if (!_currentConversationId.HasValue)
        {
            // If no conversation loaded, clear all results
            _batchResults.Clear();
            return;
        }
        
        try
        {
            var tenantId = TenantService.GetCurrentTenantId();
            if (tenantId == null) return;
            
            var conversationDocuments = GetConversationDocuments();
            if (!conversationDocuments.Any())
            {
                _batchResults.Clear();
                return;
            }
            
            // Remove results for documents that are not in current conversation
            _batchResults.RemoveAll(r => 
                !conversationDocuments.Contains(r.DocumentId) && 
                !r.ResponseId.HasValue);
            
            // Load existing responses for conversation documents
            var existingResponses = await QuestionService.GetResponsesAsync(tenantId);
            
            var relevantResponses = existingResponses
                .Where(r => r.DocumentId.HasValue && 
                           conversationDocuments.Contains(r.DocumentId.Value))
                .ToList();
            
            // Convert to BatchResult format
            foreach (var response in relevantResponses)
            {
                // Check if we already have this result (by ResponseId or by combination)
                var exists = _batchResults.Any(r => 
                    (r.ResponseId.HasValue && r.ResponseId == response.Id) ||
                    (r.DocumentId == (response.DocumentId ?? 0) && 
                     r.QuestionId == response.QuestionId && 
                     r.ResponseId.HasValue && // Must be saved
                     Math.Abs((r.CreatedAt - response.CreatedAt).TotalSeconds) < 5));
                
                if (!exists && response.Document != null)
                {
                    // For manual questions, get the question text from conversation messages
                    string questionText = response.Question?.QuestionText ?? "Manual Question";
                    if (response.QuestionId == 0 && response.ConversationId > 0)
                    {
                        try
                        {
                            // Get messages from the conversation to find the user question
                            var messages = await ChatGptService.GetConversationMessagesAsync(response.ConversationId);
                            // Find the last user message before this response was created
                            var userMessage = messages
                                .Where(m => m.Role == "user" && m.CreatedAt <= response.CreatedAt)
                                .OrderByDescending(m => m.CreatedAt)
                                .FirstOrDefault();
                            
                            if (userMessage != null)
                            {
                                questionText = userMessage.Content;
                            }
                        }
                        catch
                        {
                            // If we can't get messages, use default
                            questionText = "Manual Question";
                        }
                    }
                    
                    var batchResult = new BatchResult
                    {
                        ResponseId = response.Id,
                        DocumentId = response.DocumentId ?? 0,
                        DocumentName = response.Document.Title ?? response.Document.FileName,
                        QuestionId = response.QuestionId,
                        QuestionText = questionText,
                        PromptId = response.PromptId,
                        PromptName = response.Prompt?.Name ?? "Default",
                        Response = response.Response,
                        ConversationId = response.ConversationId,
                        CreatedAt = response.CreatedAt,
                        IsProcessing = false
                    };
                    
                    _batchResults.Add(batchResult);
                    
                    // Load conversation messages if conversation exists (will be loaded when expanded)
                    // Messages will be loaded on-demand when the result is expanded
                }
            }
            
            // Filter results to only show conversation documents
            _batchResults = _batchResults
                .Where(r => conversationDocuments.Contains(r.DocumentId) || r.ResponseId.HasValue)
                .ToList();
            
            // Sort by document, then by creation date
            _batchResults = _batchResults
                .OrderBy(r => r.DocumentId)
                .ThenBy(r => r.CreatedAt)
                .ToList();
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading existing batch results");
        }
    }
    
