@page "/chatgpt/chat"
@using Blazor_Bedrock.Services.ChatGpt
@using Blazor_Bedrock.Services.Tenant
@using Blazor_Bedrock.Services
@using Blazor_Bedrock.Services.Document
@using Blazor_Bedrock.Services.Subscription
@using Blazor_Bedrock.Services.FeatureFlag
@using Blazor_Bedrock.Data.Models
@using Blazor_Bedrock.Data
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using ChatMessage = Blazor_Bedrock.Services.ChatGpt.ChatMessage
@using Markdig
@inject IChatGptService ChatGptService
@inject IPromptService PromptService
@inject IQuestionService QuestionService
@inject ITenantService TenantService
@inject IDocumentService DocumentService
@inject ISubscriptionLimitationService LimitationService
@inject IFeatureFlagService FeatureFlagService
@inject Blazor_Bedrock.Infrastructure.ExternalApis.IDocumentProcessor DocumentProcessor
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation
@inject INotificationService NotificationService
@inject Microsoft.JSInterop.IJSRuntime JSRuntime
@inject ILogger<Chat> Logger
@rendermode InteractiveServer
@implements IAsyncDisposable

<PageTitle>ChatGPT Chat</PageTitle>

<style>
    .chat-container {
        height: 100%;
        overflow: hidden;
        width: 100%;
        box-sizing: border-box;
    }
    
    .chat-page-container {
        transition: height 0.2s ease;
    }
    
    .conversation-sidebar {
        background: #f8f9fa;
        border-right: 1px solid #dee2e6;
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        width: 100%;
        box-sizing: border-box;
        max-width: 100%;
    }
    
    .conversation-item {
        padding: 12px 16px;
        margin: 4px 8px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: left;
    }
    
    .conversation-item:hover {
        background: #e9ecef;
    }
    
    .conversation-item:hover .btn-link {
        opacity: 1 !important;
    }
    
    .conversation-item.active {
        background: #0d6efd;
        color: white;
    }
    
    .conversation-item.active:hover .btn-link {
        color: #ffc107 !important;
    }
    
    .message-bubble {
        max-width: 75%;
        padding: 12px 16px;
        border-radius: 18px;
        margin-bottom: 12px;
        word-wrap: break-word;
        line-height: 1.5;
    }
    
    .message-user {
        background: #0d6efd;
        color: white;
        margin-left: auto;
        border-bottom-right-radius: 4px;
    }
    
    .message-assistant {
        background: #f8f9fa;
        color: #212529;
        border: 1px solid #dee2e6;
        margin-right: auto;
        border-bottom-left-radius: 4px;
    }
    
    .markdown-content {
        line-height: 1.6;
    }
    
    .markdown-content h1,
    .markdown-content h2,
    .markdown-content h3,
    .markdown-content h4,
    .markdown-content h5,
    .markdown-content h6 {
        margin-top: 1em;
        margin-bottom: 0.5em;
        font-weight: 600;
        line-height: 1.25;
    }
    
    .markdown-content h1 { font-size: 1.5em; }
    .markdown-content h2 { font-size: 1.3em; }
    .markdown-content h3 { font-size: 1.1em; }
    .markdown-content h4 { font-size: 1em; }
    .markdown-content h5 { font-size: 0.9em; }
    .markdown-content h6 { font-size: 0.85em; }
    
    .markdown-content p {
        margin-bottom: 1em;
    }
    
    .markdown-content ul,
    .markdown-content ol {
        margin-bottom: 1em;
        padding-left: 2em;
    }
    
    .markdown-content li {
        margin-bottom: 0.25em;
    }
    
    .markdown-content code {
        background-color: rgba(0, 0, 0, 0.05);
        padding: 0.2em 0.4em;
        border-radius: 3px;
        font-size: 0.9em;
        font-family: 'Courier New', monospace;
    }
    
    .markdown-content pre {
        background-color: rgba(0, 0, 0, 0.05);
        padding: 1em;
        border-radius: 4px;
        overflow-x: auto;
        margin-bottom: 1em;
    }
    
    .markdown-content pre code {
        background-color: transparent;
        padding: 0;
    }
    
    .markdown-content blockquote {
        border-left: 4px solid #dee2e6;
        padding-left: 1em;
        margin-left: 0;
        margin-bottom: 1em;
        color: #6c757d;
    }
    
    .markdown-content table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 1em;
    }
    
    .markdown-content table th,
    .markdown-content table td {
        border: 1px solid #dee2e6;
        padding: 0.5em;
        text-align: left;
    }
    
    .markdown-content table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }
    
    .markdown-content a {
        color: #0d6efd;
        text-decoration: none;
    }
    
    .markdown-content a:hover {
        text-decoration: underline;
    }
    
    .markdown-content strong {
        font-weight: 600;
    }
    
    .markdown-content em {
        font-style: italic;
    }
    
    .markdown-content hr {
        border: none;
        border-top: 1px solid #dee2e6;
        margin: 1.5em 0;
    }
    
    .message-container {
        display: flex;
        flex-direction: column;
        margin-bottom: 16px;
    }
    
    .message-header {
        font-size: 0.75rem;
        color: #6c757d;
        margin-bottom: 4px;
        padding: 0 4px;
    }
    
    .chat-input-area {
        border-top: 1px solid #dee2e6;
        padding: 12px;
        background: white;
        box-sizing: border-box;
        overflow: hidden;
    }
    
    .messages-container {
        /* This is the ONLY scrollable area */
        flex: 1 1 0;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 20px;
        background: #f8f9fa;
        min-height: 0;
        /* Critical: allows flex item to shrink below content size */
    }
    
    .chat-main-area {
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }
    
    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: #6c757d;
    }
    
    .batch-result-card {
        transition: all 0.2s ease;
        border-left: 4px solid #0d6efd;
    }
    
    .batch-result-card:hover {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .batch-result-card.processing {
        border-left-color: #ffc107;
    }
    
    .batch-result-card.error {
        border-left-color: #dc3545;
    }
    
    .batch-result-card.success {
        border-left-color: #198754;
    }
    
    .question-quick-btn {
        font-size: 0.75rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px;
    }
</style>

<div class="container-fluid p-0 chat-page-container" style="height: calc(100vh - 56px - var(--logger-height, 0px) - 32px); max-height: calc(100vh - 56px - var(--logger-height, 0px) - 32px); overflow: hidden; position: relative; width: 100%; box-sizing: border-box; margin: 0; margin-top: -1.5rem; display: flex; flex-direction: column;">
    @if (!_hasApiKey)
    {
        <div class="container mt-5" style="max-width: 600px;">
            <div class="card shadow text-center">
                <div class="card-body p-5">
                    <i class="bi bi-chat-dots text-warning" style="font-size: 64px;"></i>
                    <h5 class="mt-3 mb-3">ChatGPT Not Configured</h5>
                    <p class="text-muted mb-4">
                        Please configure your OpenAI API key in settings to start chatting.
                    </p>
                    <button class="btn btn-primary btn-lg" @onclick="NavigateToSettings">
                        <i class="bi bi-gear me-2"></i>
                        Configure API Key
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-0" style="height: 100%; max-height: 100%; flex: 1; min-height: 0; overflow: hidden; display: flex; width: 100%; box-sizing: border-box; margin: 0 !important; flex-grow: 1;">
            @* Left Sidebar - Conversations and Questions *@
            <div class="col-md-3 p-0" style="height: 100%; max-height: 100%; overflow: hidden; box-sizing: border-box; max-width: 100%; display: flex; flex-direction: column; border-right: 1px solid #dee2e6;">
                <div class="conversation-sidebar" style="height: 100%; max-height: 100%; width: 100%; box-sizing: border-box; overflow: hidden; display: flex; flex-direction: column;">
                    @* Conversations Section *@
                    <div style="padding: 16px; border-bottom: 1px solid #dee2e6;">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0">Conversations</h6>
                            <button class="btn btn-sm btn-primary" @onclick="CreateNewConversation" title="New Conversation">
                                <i class="bi bi-plus-circle"></i>
                            </button>
                        </div>
                        @if (!string.IsNullOrEmpty(_preferredModel))
                        {
                            <span class="badge bg-info">@_preferredModel</span>
                        }
                        @* Subscription Limitation Counter *@
                        @if (_subscriptionsEnabled && _conversationLimitations != null)
                        {
                            <div class="mt-2">
                                <div class="d-flex align-items-center">
                                    <span class="text-muted me-2" style="font-size: 0.875rem;">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Conversations:
                                    </span>
                                    @if (_maxConversations.HasValue)
                                    {
                                        <span class="@GetConversationBadgeClass()" style="font-size: 0.875rem;">
                                            @_currentConversationCount / @_maxConversations
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success" style="font-size: 0.875rem;">
                                            @_currentConversationCount (Unlimited)
                                        </span>
                                    }
                                </div>
                                @if (_maxConversations.HasValue)
                                {
                                    @if (_currentConversationCount >= _maxConversations)
                                    {
                                        <div class="alert alert-warning alert-sm mt-2 mb-0 py-1" style="font-size: 0.75rem;">
                                            <small><i class="bi bi-exclamation-triangle me-1"></i>Limit reached.</small>
                                        </div>
                                    }
                                    else if (_currentConversationCount >= _maxConversations * 0.9)
                                    {
                                        <div class="alert alert-info alert-sm mt-2 mb-0 py-1" style="font-size: 0.75rem;">
                                            <small><i class="bi bi-info-circle me-1"></i>Approaching limit.</small>
                                        </div>
                                    }
                                }
                            </div>
                        }
                    </div>
                    
                    <div style="flex: 1 1 40%; min-height: 200px; max-height: 50%; overflow-y: auto; overflow-x: hidden; border-bottom: 1px solid #dee2e6;">
                        @if (_conversations.Any())
                        {
                            @foreach (var conv in _conversations)
                            {
                                var hasUploadedDoc = !string.IsNullOrEmpty(conv.OpenAiThreadId) && 
                                                    !string.IsNullOrEmpty(conv.OpenAiAssistantId) &&
                                                    !string.IsNullOrEmpty(conv.OpenAiFileIds);
                                
                                <div class="conversation-item @(conv.Id == _currentConversationId ? "active" : "")"
                                     @onclick="() => LoadConversation(conv.Id)">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center" style="flex: 1; min-width: 0;">
                                            <i class="bi bi-chat-bubble me-2"></i>
                                            <div style="flex: 1; min-width: 0;">
                                                <div style="@GetConversationItemStyle(conv.Id)">
                                                    @conv.Title
                                                    @if (hasUploadedDoc)
                                                    {
                                                        <i class="bi bi-cloud-check-fill text-success ms-1" style="font-size: 0.75rem;" title="Document in OpenAI memory"></i>
                                                    }
                                                </div>
                                                @if (conv.UpdatedAt.HasValue)
                                                {
                                                    <small class="text-muted" style="font-size: 0.7rem;">
                                                        @GetRelativeTime(conv.UpdatedAt.Value)
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                        <button class="btn btn-sm btn-link text-danger p-1 ms-2" 
                                                @onclick:stopPropagation="true"
                                                @onclick="() => DeleteConversation(conv.Id)"
                                                title="Delete conversation"
                                                style="flex-shrink: 0; opacity: 0.7; transition: opacity 0.2s;">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center p-4 text-muted">
                                <p class="mb-1">No conversations yet</p>
                                <small>Start a new conversation to begin</small>
                            </div>
                        }
                    </div>
                    
                    @* Questions Section *@
                    <div style="flex: 1 1 60%; min-height: 200px; overflow: hidden; display: flex; flex-direction: column;">
                        <div style="padding: 16px; border-bottom: 1px solid #dee2e6; flex-shrink: 0;">
                            <div class="d-flex align-items-center justify-content-between mb-2">
                                <h6 class="mb-0">Saved Questions</h6>
                                <button class="btn btn-sm btn-outline-primary" @onclick="NavigateToQuestions" title="Manage Questions">
                                    <i class="bi bi-gear"></i>
                                </button>
                            </div>
                            <div class="mb-2">
                                <input type="text" 
                                       class="form-control form-control-sm" 
                                       placeholder="Filter questions..." 
                                       @bind="_questionFilter"
                                       @bind:event="oninput"
                                       style="font-size: 0.75rem;" />
                            </div>
                            <div class="mb-2">
                                <select class="form-select form-select-sm" @bind="_selectedQuestionGroupFilter" @bind:event="onchange">
                                    <option value="">All Groups</option>
                                    @foreach (var group in _questionGroups)
                                    {
                                        <option value="@group.Id">@group.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        
                        <div style="flex: 1 1 auto; min-height: 0; overflow-y: auto; overflow-x: hidden;">
                            @if (_filteredQuestions.Any())
                            {
                                @foreach (var question in _filteredQuestions)
                                {
                                    <div class="conversation-item" style="cursor: default; padding: 8px 12px;">
                                        <div class="d-flex align-items-start justify-content-between">
                                            <div style="flex: 1; min-width: 0; margin-right: 8px;">
                                                <div style="font-size: 0.875rem; font-weight: 500; margin-bottom: 4px;">
                                                    @question.QuestionText
                                                </div>
                                                @if (question.Group != null)
                                                {
                                                    <small class="text-muted" style="font-size: 0.7rem;">
                                                        <i class="bi bi-folder me-1"></i>@question.Group.Name
                                                    </small>
                                                }
                                            </div>
                                            <div class="d-flex gap-1" style="flex-shrink: 0; flex-direction: column;">
                                                @* Execute buttons for individual or combined *@
                                                @if (_currentConversationId.HasValue)
                                                {
                                                    var conversationDocs = GetConversationDocuments();
                                                    var hasMultipleDocs = conversationDocs.Count > 1;
                                                    <button class="btn btn-sm btn-primary mb-1" 
                                                            @onclick="() => ExecuteQuestionToDocuments(question.Id, false)"
                                                            disabled="@(_isLoading || _isProcessing)"
                                                            title="Ask this question to each document separately">
                                                        <i class="bi bi-file-earmark me-1"></i>Each Doc
                                                    </button>
                                                    @if (hasMultipleDocs)
                                                    {
                                                        <button class="btn btn-sm btn-outline-primary" 
                                                                @onclick="() => ExecuteQuestionToDocuments(question.Id, true)"
                                                                disabled="@(_isLoading || _isProcessing)"
                                                                title="Ask this question to all documents together">
                                                            <i class="bi bi-files me-1"></i>All Together
                                                        </button>
                                                    }
                                                }
                                                else
                                                {
                                                    <small class="text-muted" style="font-size: 0.7rem;">Load a conversation</small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else if (_questionGroups.Any() || _allQuestions.Any())
                            {
                                <div class="text-center p-4 text-muted">
                                    <p class="mb-1">No questions match filter</p>
                                </div>
                            }
                            else
                            {
                                <div class="text-center p-4 text-muted">
                                    <p class="mb-1">No saved questions</p>
                                    <small><a href="/chatgpt/questions" class="text-primary">Create questions</a> to use batch processing</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            
            @* Main Chat Area *@
            <div class="col-md-9 p-0" style="height: 100%; max-height: 100%; display: flex; flex-direction: column; overflow: hidden; width: 100%; box-sizing: border-box; max-width: 100%; flex: 1; min-height: 0;">
                <div style="height: 100%; max-height: 100%; display: flex; flex-direction: column; overflow: hidden; width: 100%; box-sizing: border-box; max-width: 100%; flex: 1; min-height: 0;">
                    @* Header *@
                    <div style="padding: 12px 16px; border-bottom: 1px solid #dee2e6; background: white; flex: 0 0 auto; box-sizing: border-box; width: 100%; max-width: 100%; overflow: hidden;">
                        <div class="d-flex align-items-center justify-content-between mb-2" style="width: 100%; box-sizing: border-box;">
                            <div style="flex: 1; min-width: 0; overflow: hidden;">
                                <h5 class="mb-0">
                                    <i class="bi bi-file-earmark-text me-2"></i>Document Analysis
                                </h5>
                            </div>
                            <div style="flex: 1; min-width: 0; overflow: hidden; text-align: right;">
                                <h6 class="mb-0" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    @(_currentConversationId.HasValue ? GetCurrentConversationTitle() : "New Conversation")
                                </h6>
                                @if (!string.IsNullOrEmpty(_preferredModel))
                                {
                                    <small class="text-muted" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        Model: @_preferredModel
                                    </small>
                                }
                                @if (_currentConversationId.HasValue && _conversationLimitations?.MaxQueriesPerConversation.HasValue == true)
                                {
                                    var userMessageCount = _messages.Count(m => m.Role == "user");
                                    var maxQueries = _conversationLimitations.MaxQueriesPerConversation.Value;
                                    <small class="@GetQueriesLimitClass(userMessageCount, maxQueries)" style="display: block; margin-top: 4px;">
                                        <i class="bi bi-chat-dots me-1"></i>
                                        Messages: @userMessageCount / @maxQueries
                                    </small>
                                }
                            </div>
                            @if (_currentConversationId.HasValue && _messages.Any())
                            {
                                <button class="btn btn-sm btn-outline-danger" @onclick="ClearCurrentConversation" title="Clear Conversation" style="flex-shrink: 0;">
                                    <i class="bi bi-trash"></i>
                                </button>
                            }
                        </div>
                        <div class="d-flex align-items-center mt-2" style="gap: 12px; flex-wrap: wrap; width: 100%; box-sizing: border-box;">
                            <div style="min-width: 200px; max-width: calc(100% - 40px); flex: 1 1 auto; width: auto;">
                                <select class="form-select form-select-sm" value="@_selectedPromptId" @onchange="OnPromptChanged" disabled="@_isLoading">
                                    <option value="">None (Default)</option>
                                    @foreach (var prompt in _availablePrompts)
                                    {
                                        <option value="@prompt.Id">@prompt.Name</option>
                                    }
                                </select>
                            </div>
                            @if (_selectedPromptId.HasValue)
                            {
                                var selectedPrompt = _availablePrompts.FirstOrDefault(p => p.Id == _selectedPromptId.Value);
                                @if (selectedPrompt != null && !string.IsNullOrEmpty(selectedPrompt.Description))
                                {
                                    <span class="text-info" data-bs-toggle="tooltip" data-bs-placement="top" title="@selectedPrompt.Description">
                                        <i class="bi bi-info-circle"></i>
                                    </span>
                                }
                            }
                        </div>
                        <div class="d-flex align-items-center mt-2" style="gap: 12px; flex-wrap: wrap; width: 100%; box-sizing: border-box;">
                            <div style="min-width: 200px; max-width: calc(100% - 40px); flex: 1 1 auto; width: auto;">
                                <select class="form-select form-select-sm" value="@_selectedDocumentId" @onchange="OnDocumentChanged" disabled="@_isLoading">
                                    <option value="">No Document</option>
                                    @foreach (var doc in _availableDocuments)
                                    {
                                        <option value="@doc.Id">@(doc.Title ?? doc.FileName)</option>
                                    }
                                </select>
                            </div>
                            @if (_selectedDocumentId.HasValue)
                            {
                                <div class="d-flex align-items-center gap-2" style="flex-shrink: 0;">
                                    <button class="btn btn-sm btn-primary" 
                                            @onclick="UploadDocumentToOpenAI" 
                                            disabled="@(_isLoading || _isUploadingDocument)"
                                            title="Upload document to OpenAI and create/update conversation">
                                        @if (_isUploadingDocument)
                                        {
                                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-cloud-upload me-1"></i>
                                        }
                                        Upload to OpenAI
                                    </button>
                                    @if (!_isLoading && _currentConversationId.HasValue)
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="ClearSelectedDocument" title="Remove document from conversation">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    }
                                </div>
                            }
                        </div>
                        @* Upload Progress Bar *@
                        @if (_isUploadingDocument && !string.IsNullOrEmpty(_uploadProgress))
                        {
                            <div class="mt-2" style="max-width: 600px;">
                                <div class="d-flex align-items-center justify-content-between mb-1">
                                    <small class="text-muted" style="font-size: 0.75rem;">@_uploadProgress</small>
                                    <small class="text-muted" style="font-size: 0.75rem;">@_uploadProgressPercent%</small>
                                </div>
                                <div class="progress" style="height: 4px; border-radius: 2px; background-color: #e9ecef;">
                                    <div class="progress-bar @(_uploadProgressPercent < 100 ? "progress-bar-striped progress-bar-animated" : "")" 
                                         role="progressbar" 
                                         style="width: @_uploadProgressPercent%; background-color: #0d6efd; transition: width 0.3s ease;"
                                         aria-valuenow="@_uploadProgressPercent" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100"></div>
                                </div>
                            </div>
                        }
                        @* Sheet Selection UI for Excel files *@
                        @if (_showSheetSelection && _availableSheetNames.Any())
                        {
                            <div class="mt-2 p-2 border rounded" style="background-color: #f8f9fa;">
                                <div class="d-flex align-items-center justify-content-between mb-2">
                                    <small class="fw-bold text-muted">
                                        <i class="bi bi-table me-1"></i>Select Spreadsheet Sheets:
                                    </small>
                                    <div>
                                        <button class="btn btn-sm btn-link p-0 me-2" @onclick="SelectAllSheets" style="font-size: 0.75rem;">
                                            Select All
                                        </button>
                                        <button class="btn btn-sm btn-link p-0" @onclick="DeselectAllSheets" style="font-size: 0.75rem;">
                                            Deselect All
                                        </button>
                                    </div>
                                </div>
                                <div class="d-flex flex-wrap gap-2" style="max-height: 120px; overflow-y: auto;">
                                    @foreach (var sheetName in _availableSheetNames)
                                    {
                                        <label class="form-check-label d-flex align-items-center" style="cursor: pointer; font-size: 0.8rem;">
                                            <input type="checkbox" 
                                                   class="form-check-input me-1" 
                                                   checked="@_selectedSheetNames.Contains(sheetName)"
                                                   @onchange="@((ChangeEventArgs e) => ToggleSheetSelection(sheetName, (bool)(e.Value ?? false)))" />
                                            <span>@sheetName</span>
                                        </label>
                                    }
