    {
        if (!result.ResponseId.HasValue)
        {
            // Just remove from UI if not saved to database
            _batchResults.Remove(result);
            StateHasChanged();
            return;
        }
        
        try
        {
            var tenantId = TenantService.GetCurrentTenantId();
            var deleted = await QuestionService.DeleteResponseAsync(result.ResponseId.Value, tenantId);
            
            if (deleted)
            {
                _batchResults.Remove(result);
                await NotificationService.ShowSuccessAsync("Result deleted successfully.");
            }
            else
            {
                await NotificationService.ShowErrorAsync("Failed to delete result. It may have already been deleted.");
                // Remove from UI anyway
                _batchResults.Remove(result);
            }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error deleting result: {ex.Message}");
            Logger.LogError(ex, "Error deleting batch result {ResponseId}", result.ResponseId);
        }
    }
    
