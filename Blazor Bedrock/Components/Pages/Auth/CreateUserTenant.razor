@page "/auth/create-user-tenant"
@using Blazor_Bedrock.Data.Models
@using Blazor_Bedrock.Services.Auth
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]
@inject IIdentityService IdentityService
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation
@inject INotificationService NotificationService
@rendermode InteractiveServer

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow">
        <div class="card-body p-5">
            <h4 class="mb-4">Create Account</h4>
            
            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <strong>Error:</strong> @_errorMessage
                    <button type="button" class="btn-close" @onclick="() => _errorMessage = string.Empty" aria-label="Close"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(_successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    @_successMessage
                    <button type="button" class="btn-close" @onclick="() => _successMessage = string.Empty" aria-label="Close"></button>
                </div>
            }
            
            <EditForm Model="@_userModel" OnValidSubmit="HandleUserSubmit">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label for="firstName" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="firstName" @bind="_userModel.FirstName" required />
                </div>
                
                <div class="mb-3">
                    <label for="lastName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="lastName" @bind="_userModel.LastName" required />
                </div>
                
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" @bind="_userModel.Email" required />
                </div>
                
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" @bind="_userModel.Password" required />
                </div>
                
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" @bind="_userModel.ConfirmPassword" required />
                </div>
                
                <button type="submit" class="btn btn-primary w-100" disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Creating Account...</span>
                    }
                    else
                    {
                        <span>Create Account</span>
                    }
                </button>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private UserModel _userModel = new();
    private bool _isLoading = false;
    private string _errorMessage = string.Empty;
    private string _successMessage = string.Empty;

    private class UserModel
    {
        public string FirstName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
    }

    private async Task HandleUserSubmit()
    {
        _errorMessage = string.Empty;
        _successMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(_userModel.FirstName))
        {
            _errorMessage = "First name is required.";
            await NotificationService.ShowErrorAsync(_errorMessage);
            return;
        }

        if (string.IsNullOrWhiteSpace(_userModel.LastName))
        {
            _errorMessage = "Last name is required.";
            await NotificationService.ShowErrorAsync(_errorMessage);
            return;
        }

        if (string.IsNullOrWhiteSpace(_userModel.Email))
        {
            _errorMessage = "Email is required.";
            await NotificationService.ShowErrorAsync(_errorMessage);
            return;
        }

        if (string.IsNullOrWhiteSpace(_userModel.Password))
        {
            _errorMessage = "Password is required.";
            await NotificationService.ShowErrorAsync(_errorMessage);
            return;
        }

        if (_userModel.Password != _userModel.ConfirmPassword)
        {
            _errorMessage = "Passwords do not match.";
            await NotificationService.ShowErrorAsync(_errorMessage);
            return;
        }

        if (_userModel.Password.Length < 8)
        {
            _errorMessage = "Password must be at least 8 characters long.";
            await NotificationService.ShowErrorAsync(_errorMessage);
            return;
        }

        _isLoading = true;
        try
        {
            // Check if user already exists
            var existingUser = await UserManager.FindByEmailAsync(_userModel.Email);
            if (existingUser != null)
            {
                _errorMessage = $"A user with email '{_userModel.Email}' already exists.";
                await NotificationService.ShowErrorAsync(_errorMessage);
                _isLoading = false;
                return;
            }

            var user = new ApplicationUser
            {
                UserName = _userModel.Email,
                Email = _userModel.Email,
                FirstName = _userModel.FirstName,
                LastName = _userModel.LastName,
                EmailConfirmed = true,
                IsActive = true
            };

            var result = await IdentityService.CreateUserAsync(user, _userModel.Password);
            
            if (result.Succeeded)
            {
                _successMessage = $"Account created successfully! Redirecting to login...";
                await NotificationService.ShowSuccessAsync("Account created successfully!");
                
                // Wait a moment before navigating to show success message
                await Task.Delay(1500);
                Navigation.NavigateTo("/auth/login");
            }
            else
            {
                // Show each error on a separate line
                var errorList = result.Errors.Select(e => $"{e.Description} (Code: {e.Code})").ToList();
                _errorMessage = string.Join(" | ", errorList);
                
                foreach (var error in result.Errors)
                {
                    await NotificationService.ShowErrorAsync($"Error: {error.Description} (Code: {error.Code})");
                }
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Exception occurred while creating account: {ex.Message}";
            if (ex.InnerException != null)
            {
                _errorMessage += $" Inner exception: {ex.InnerException.Message}";
                await NotificationService.ShowErrorAsync($"Inner exception: {ex.InnerException.Message}");
            }
            await NotificationService.ShowErrorAsync(_errorMessage);
        }
        finally
        {
            _isLoading = false;
        }
    }
}
