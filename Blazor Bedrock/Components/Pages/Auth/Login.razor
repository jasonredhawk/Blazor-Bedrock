@page "/auth/login"
@using Blazor_Bedrock.Services.Auth
@using Blazor_Bedrock.Services.FeatureFlag
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@using Microsoft.AspNetCore.WebUtilities
@attribute [AllowAnonymous]
@inject IIdentityService IdentityService
@inject IFeatureFlagService FeatureFlagService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject INotificationService NotificationService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow">
        <div class="card-body p-5">
            <h4 class="mb-4">Login</h4>
            
            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <strong>Login Error:</strong> @_errorMessage
                    <button type="button" class="btn-close" @onclick="() => _errorMessage = string.Empty" aria-label="Close"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(_successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    @_successMessage
                    <button type="button" class="btn-close" @onclick="() => _successMessage = string.Empty" aria-label="Close"></button>
                </div>
            }
            
            <form method="post" action="/auth/login-post" id="loginForm">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" @bind="_loginModel.Email" required />
                </div>
                
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" @bind="_loginModel.Password" required />
                </div>
                
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" @bind="_loginModel.RememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                
                <input type="hidden" name="email" value="@_loginModel.Email" />
                <input type="hidden" name="password" value="@_loginModel.Password" />
                <input type="hidden" name="rememberMe" value="@_loginModel.RememberMe" />
                
                <button type="submit" class="btn btn-primary w-100" disabled="@_isLoading" @onclick="HandleFormSubmit">
                    @if (_isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Logging in...</span>
                    }
                    else
                    {
                        <span>Login</span>
                    }
                </button>
            </form>
            
            <hr class="my-4" />
            
            <FeatureGate FeatureName="Auth_Google">
                <a href="/auth/external/google" class="btn btn-outline-primary w-100 mb-2">
                    <i class="bi bi-google me-2"></i>
                    Sign in with Google
                </a>
            </FeatureGate>
            
            <FeatureGate FeatureName="Auth_Facebook">
                <a href="/auth/external/facebook" class="btn btn-outline-primary w-100 mb-2">
                    <i class="bi bi-facebook me-2"></i>
                    Sign in with Facebook
                </a>
            </FeatureGate>
            
            <p class="mt-4 text-center text-muted">
                Don't have an account? 
                <a href="/auth/create-user">Create one here</a>
            </p>
        </div>
    </div>
</div>

@code {
    private LoginModel _loginModel = new();
    private bool _isLoading = false;
    private string _errorMessage = string.Empty;
    private string _successMessage = string.Empty;

    private class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public bool RememberMe { get; set; } = false;
    }

    protected override void OnInitialized()
    {
        // Check for error query parameter
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var queryParams = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
        if (queryParams.TryGetValue("error", out var error))
        {
            _errorMessage = error.ToString();
        }
    }

    private async Task HandleFormSubmit()
    {
        _errorMessage = string.Empty;
        _successMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(_loginModel.Email))
        {
            _errorMessage = "Email is required.";
            await NotificationService.ShowErrorAsync(_errorMessage);
            return;
        }

        if (string.IsNullOrWhiteSpace(_loginModel.Password))
        {
            _errorMessage = "Password is required.";
            await NotificationService.ShowErrorAsync(_errorMessage);
            return;
        }

        _isLoading = true;
        StateHasChanged();
        
        // Let the form submit naturally - it will POST to /auth/login endpoint
        // The endpoint will set the cookie and redirect
        await Task.CompletedTask;
    }
}
