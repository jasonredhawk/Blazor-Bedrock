@page "/auth/login"
@using Blazor_Bedrock.Services.Auth
@using Blazor_Bedrock.Services.FeatureFlag
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@using Microsoft.AspNetCore.WebUtilities
@using MudBlazor
@attribute [AllowAnonymous]
@inject IIdentityService IdentityService
@inject IFeatureFlagService FeatureFlagService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudPaper Elevation="3" Class="pa-8">
        <MudText Typo="Typo.h4" Class="mb-4">Login</MudText>
        
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4" Dismissible="true" OnCloseButtonClick="() => _errorMessage = string.Empty">
                <MudText Typo="Typo.body2"><strong>Login Error:</strong> @_errorMessage</MudText>
            </MudAlert>
        }

        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <MudAlert Severity="Severity.Success" Class="mb-4" Dismissible="true" OnCloseButtonClick="() => _successMessage = string.Empty">
                <MudText Typo="Typo.body2">@_successMessage</MudText>
            </MudAlert>
        }
        
        <form method="post" action="/auth/login-post" id="loginForm">
            <MudTextField @bind-Value="_loginModel.Email" 
                          Label="Email" 
                          Variant="Variant.Outlined" 
                          InputType="InputType.Email"
                          Required="true"
                          RequiredError="Email is required"
                          For="@(() => _loginModel.Email)"
                          Class="mb-4" />
            
            <MudTextField @bind-Value="_loginModel.Password" 
                          Label="Password" 
                          Variant="Variant.Outlined" 
                          InputType="InputType.Password"
                          Required="true"
                          RequiredError="Password is required"
                          For="@(() => _loginModel.Password)"
                          Class="mb-4" />
            
            <MudCheckBox @bind-Checked="_loginModel.RememberMe" Label="Remember me" T="bool" Class="mb-4" />
            
            <input type="hidden" name="email" value="@_loginModel.Email" />
            <input type="hidden" name="password" value="@_loginModel.Password" />
            <input type="hidden" name="rememberMe" value="@_loginModel.RememberMe" />
            
            <MudButton ButtonType="ButtonType.Submit" 
                       Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       Disabled="@_isLoading"
                       OnClick="HandleFormSubmit">
                @if (_isLoading)
                {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                    <MudText Class="ms-2">Logging in...</MudText>
                }
                else
                {
                    <MudText>Login</MudText>
                }
            </MudButton>
        </form>
        
        <MudDivider Class="my-4" />
        
        <FeatureGate FeatureName="Auth_Google">
            <MudButton Variant="Variant.Outlined" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       StartIcon="@Icons.Material.Filled.AccountCircle"
                       Href="/auth/external/google"
                       Class="mb-2">
                Sign in with Google
            </MudButton>
        </FeatureGate>
        
        <FeatureGate FeatureName="Auth_Facebook">
            <MudButton Variant="Variant.Outlined" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       StartIcon="@Icons.Material.Filled.Public"
                       Href="/auth/external/facebook"
                       Class="mb-2">
                Sign in with Facebook
            </MudButton>
        </FeatureGate>
        
        <MudText Typo="Typo.body2" Class="mt-4 text-center">
            Don't have an account? 
            <MudLink Href="/auth/create-user-tenant">Create one here</MudLink>
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    private LoginModel _loginModel = new();
    private bool _isLoading = false;
    private string _errorMessage = string.Empty;
    private string _successMessage = string.Empty;

    private class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public bool RememberMe { get; set; } = false;
    }

    protected override void OnInitialized()
    {
        // Check for error query parameter
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var queryParams = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
        if (queryParams.TryGetValue("error", out var error))
        {
            _errorMessage = error.ToString();
        }
    }

    private async Task HandleFormSubmit()
    {
        _errorMessage = string.Empty;
        _successMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(_loginModel.Email))
        {
            _errorMessage = "Email is required.";
            Snackbar.Add(_errorMessage, Severity.Error);
            return;
        }

        if (string.IsNullOrWhiteSpace(_loginModel.Password))
        {
            _errorMessage = "Password is required.";
            Snackbar.Add(_errorMessage, Severity.Error);
            return;
        }

        _isLoading = true;
        StateHasChanged();
        
        // Let the form submit naturally - it will POST to /auth/login endpoint
        // The endpoint will set the cookie and redirect
        await Task.CompletedTask;
    }
}

