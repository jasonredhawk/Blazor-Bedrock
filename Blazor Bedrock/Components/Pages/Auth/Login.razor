@page "/auth/login"
@using Blazor_Bedrock.Services.Auth
@using Blazor_Bedrock.Services.FeatureFlag
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using MudBlazor
@attribute [AllowAnonymous]
@inject IIdentityService IdentityService
@inject IFeatureFlagService FeatureFlagService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudPaper Elevation="3" Class="pa-8">
        <MudText Typo="Typo.h4" Class="mb-4">Login</MudText>
        
        <EditForm Model="@_loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            
            <MudTextField @bind-Value="_loginModel.Email" 
                          Label="Email" 
                          Variant="Variant.Outlined" 
                          InputType="InputType.Email"
                          Required="true"
                          RequiredError="Email is required"
                          Class="mb-4" />
            
            <MudTextField @bind-Value="_loginModel.Password" 
                          Label="Password" 
                          Variant="Variant.Outlined" 
                          InputType="InputType.Password"
                          Required="true"
                          RequiredError="Password is required"
                          Class="mb-4" />
            
            <MudCheckBox @bind-Checked="_loginModel.RememberMe" Label="Remember me" T="bool" Class="mb-4" />
            
            <MudButton ButtonType="ButtonType.Submit" 
                       Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       Disabled="@_isLoading">
                @if (_isLoading)
                {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                    <MudText Class="ms-2">Logging in...</MudText>
                }
                else
                {
                    <MudText>Login</MudText>
                }
            </MudButton>
        </EditForm>
        
        <MudDivider Class="my-4" />
        
        <FeatureGate FeatureName="Auth_Google">
            <MudButton Variant="Variant.Outlined" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       StartIcon="@Icons.Material.Filled.AccountCircle"
                       Href="/auth/external/google"
                       Class="mb-2">
                Sign in with Google
            </MudButton>
        </FeatureGate>
        
        <FeatureGate FeatureName="Auth_Facebook">
            <MudButton Variant="Variant.Outlined" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       StartIcon="@Icons.Material.Filled.Public"
                       Href="/auth/external/facebook"
                       Class="mb-2">
                Sign in with Facebook
            </MudButton>
        </FeatureGate>
        
        <MudText Typo="Typo.body2" Class="mt-4 text-center">
            Don't have an account? 
            <MudLink Href="/auth/create-user-tenant">Create one here</MudLink>
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    private LoginModel _loginModel = new();
    private bool _isLoading = false;

    private class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public bool RememberMe { get; set; } = false;
    }

    private async Task HandleLogin()
    {
        _isLoading = true;
        try
        {
            var result = await IdentityService.SignInAsync(
                _loginModel.Email, 
                _loginModel.Password, 
                _loginModel.RememberMe);

            if (result.Succeeded)
            {
                Snackbar.Add("Login successful!", Severity.Success);
                Navigation.NavigateTo("/");
            }
            else if (result.IsLockedOut)
            {
                Snackbar.Add("Account is locked out. Please try again later.", Severity.Warning);
            }
            else if (result.RequiresTwoFactor)
            {
                Snackbar.Add("Two-factor authentication required.", Severity.Info);
            }
            else
            {
                Snackbar.Add("Invalid email or password.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"An error occurred: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }
}

