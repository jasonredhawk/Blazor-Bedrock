@page "/auth/login"
@using Blazor_Bedrock.Services.Auth
@using Blazor_Bedrock.Services.FeatureFlag
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@using MudBlazor
@attribute [AllowAnonymous]
@inject IIdentityService IdentityService
@inject IFeatureFlagService FeatureFlagService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudPaper Elevation="3" Class="pa-8">
        <MudText Typo="Typo.h4" Class="mb-4">Login</MudText>
        
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4" Dismissible="true" OnCloseButtonClick="() => _errorMessage = string.Empty">
                <MudText Typo="Typo.body2"><strong>Login Error:</strong> @_errorMessage</MudText>
            </MudAlert>
        }

        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <MudAlert Severity="Severity.Success" Class="mb-4" Dismissible="true" OnCloseButtonClick="() => _successMessage = string.Empty">
                <MudText Typo="Typo.body2">@_successMessage</MudText>
            </MudAlert>
        }
        
        <EditForm Model="@_loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            
            <MudTextField @bind-Value="_loginModel.Email" 
                          Label="Email" 
                          Variant="Variant.Outlined" 
                          InputType="InputType.Email"
                          Required="true"
                          RequiredError="Email is required"
                          Class="mb-4" />
            
            <MudTextField @bind-Value="_loginModel.Password" 
                          Label="Password" 
                          Variant="Variant.Outlined" 
                          InputType="InputType.Password"
                          Required="true"
                          RequiredError="Password is required"
                          Class="mb-4" />
            
            <MudCheckBox @bind-Checked="_loginModel.RememberMe" Label="Remember me" T="bool" Class="mb-4" />
            
            <MudButton ButtonType="ButtonType.Submit" 
                       Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       Disabled="@_isLoading">
                @if (_isLoading)
                {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                    <MudText Class="ms-2">Logging in...</MudText>
                }
                else
                {
                    <MudText>Login</MudText>
                }
            </MudButton>
        </EditForm>
        
        <MudDivider Class="my-4" />
        
        <FeatureGate FeatureName="Auth_Google">
            <MudButton Variant="Variant.Outlined" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       StartIcon="@Icons.Material.Filled.AccountCircle"
                       Href="/auth/external/google"
                       Class="mb-2">
                Sign in with Google
            </MudButton>
        </FeatureGate>
        
        <FeatureGate FeatureName="Auth_Facebook">
            <MudButton Variant="Variant.Outlined" 
                       Color="Color.Primary" 
                       FullWidth="true"
                       StartIcon="@Icons.Material.Filled.Public"
                       Href="/auth/external/facebook"
                       Class="mb-2">
                Sign in with Facebook
            </MudButton>
        </FeatureGate>
        
        <MudText Typo="Typo.body2" Class="mt-4 text-center">
            Don't have an account? 
            <MudLink Href="/auth/create-user-tenant">Create one here</MudLink>
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    private LoginModel _loginModel = new();
    private bool _isLoading = false;
    private string _errorMessage = string.Empty;
    private string _successMessage = string.Empty;

    private class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public bool RememberMe { get; set; } = false;
    }

    private async Task HandleLogin()
    {
        _errorMessage = string.Empty;
        _successMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(_loginModel.Email))
        {
            _errorMessage = "Email is required.";
            Snackbar.Add(_errorMessage, Severity.Error);
            return;
        }

        if (string.IsNullOrWhiteSpace(_loginModel.Password))
        {
            _errorMessage = "Password is required.";
            Snackbar.Add(_errorMessage, Severity.Error);
            return;
        }

        _isLoading = true;
        try
        {
            var result = await IdentityService.SignInAsync(
                _loginModel.Email, 
                _loginModel.Password, 
                _loginModel.RememberMe);

            if (result.Succeeded)
            {
                _successMessage = $"Login successful! Welcome back, {_loginModel.Email}.";
                Snackbar.Add(_successMessage, Severity.Success);
                StateHasChanged(); // Update UI to show success message
                
                // Wait a bit to ensure authentication cookie is set
                await Task.Delay(300);
                
                // Use JavaScript redirect to avoid header conflicts
                // This happens client-side after the server response is complete
                await JSRuntime.InvokeVoidAsync("location.replace", "/");
            }
            else if (result.IsLockedOut)
            {
                _errorMessage = "Account is locked out due to too many failed login attempts. Please try again later.";
                Snackbar.Add(_errorMessage, Severity.Warning);
            }
            else if (result.RequiresTwoFactor)
            {
                _errorMessage = "Two-factor authentication is required for this account.";
                Snackbar.Add(_errorMessage, Severity.Info);
            }
            else if (result.IsNotAllowed)
            {
                _errorMessage = "Login is not allowed for this account. The account may be inactive or email verification may be required.";
                Snackbar.Add(_errorMessage, Severity.Warning);
            }
            else
            {
                _errorMessage = $"Invalid email or password for '{_loginModel.Email}'. Please check your credentials and try again.";
                Snackbar.Add(_errorMessage, Severity.Error);
            }
        }
        catch (InvalidOperationException ioEx) when (ioEx.Message.Contains("Headers are read-only") || ioEx.Message.Contains("response has already started"))
        {
            // This can happen in Blazor Server when the response has started streaming
            // The sign-in might have partially succeeded (cookie may have been set)
            // Treat as success and redirect - if cookie wasn't set, user will be redirected back to login
            _successMessage = $"Login successful! Redirecting...";
            Snackbar.Add(_successMessage, Severity.Success);
            StateHasChanged();
            await Task.Delay(300);
            await JSRuntime.InvokeVoidAsync("location.replace", "/");
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred during login: {ex.Message}";
            if (ex.InnerException != null)
            {
                _errorMessage += $" Inner exception: {ex.InnerException.Message}";
                Snackbar.Add($"Inner exception: {ex.InnerException.Message}", Severity.Error);
            }
            Snackbar.Add(_errorMessage, Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }
}

