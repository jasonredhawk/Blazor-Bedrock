@page "/charts"
@using Blazor_Bedrock.Services.FeatureFlag
@using Blazor_Bedrock.Services.Tenant
@using Blazor_Bedrock.Services.Auth
@using Microsoft.AspNetCore.Components.Authorization
@inject IFeatureFlagService FeatureFlagService
@inject ITenantService TenantService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Charts - Blazor Bedrock</PageTitle>

<FeatureGate FeatureName="Charts_Enabled">
    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Charts</h2>
            <a href="/charts/create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Create Chart
            </a>
        </div>

        <div class="card shadow">
            <div class="card-body p-4">
                <div class="text-center py-5">
                    <i class="bi bi-bar-chart display-1 text-muted"></i>
                    <h4 class="mt-3">Chart Creation</h4>
                    <p class="text-muted">
                        Create professional charts from your Excel or CSV data files.
                    </p>
                    <p class="text-muted">
                        Select columns, choose chart types, customize axes and legends, and generate Excel files with embedded charts.
                    </p>
                    <a href="/charts/create" class="btn btn-primary btn-lg mt-3">
                        <i class="bi bi-plus-circle me-2"></i>Create Your First Chart
                    </a>
                </div>

                <div class="mt-5">
                    <h5>Features:</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success me-2"></i>Multiple chart types: Line, Column, Bar, Pie, Scatter, Area</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Flexible column selection for X and Y axes</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Customizable titles, legends, and axis labels</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>AI-powered data analysis (requires ChatGPT)</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Export to Excel with formatted data and charts</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</FeatureGate>

@code {
    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User?.Identity?.IsAuthenticated != true)
        {
            Navigation.NavigateTo("/auth/login");
            return;
        }

        var tenantId = TenantService.GetCurrentTenantId();
        if (tenantId == null)
        {
            Navigation.NavigateTo("/");
            return;
        }

        // Check if Charts feature is enabled
        var isEnabled = await FeatureFlagService.IsEnabledAsync("Charts_Enabled");
        if (!isEnabled)
        {
            Navigation.NavigateTo("/");
            return;
        }
    }
}
