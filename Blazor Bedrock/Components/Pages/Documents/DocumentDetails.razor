@page "/documents/{DocumentId:int}"
@using Blazor_Bedrock.Services.Document
@using Blazor_Bedrock.Services.Tenant
@using Blazor_Bedrock.Services.FeatureFlag
@using Blazor_Bedrock.Data.Models
@using Blazor_Bedrock.Infrastructure.ExternalApis
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@inject IDocumentService DocumentService
@inject ITenantService TenantService
@inject IFeatureFlagService FeatureFlagService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Document Details - Blazor Bedrock</PageTitle>

<div class="container mt-4">
    @if (document == null)
    {
        <div class="alert alert-warning">Document not found.</div>
        <a href="/documents" class="btn btn-secondary">Back to Documents</a>
    }
    else
    {
        <div class="mb-3">
            <a href="/documents" class="btn btn-secondary">← Back to Documents</a>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @errorMessage
                <button type="button" class="btn-close" @onclick="() => { errorMessage = null; StateHasChanged(); }" aria-label="Close"></button>
            </div>
        }

        <div class="card mb-4">
            <div class="card-header">
                <h3>@(document.Title ?? document.FileName)</h3>
            </div>
            <div class="card-body">
                <p><strong>Filename:</strong> @document.FileName</p>
                @if (!string.IsNullOrEmpty(document.Author))
                {
                    <p><strong>Author:</strong> @document.Author</p>
                }
                <p><strong>Upload Date:</strong> @document.UploadedAt.ToString("yyyy-MM-dd HH:mm")</p>
                <p><strong>File Size:</strong> @((document.FileSize / 1024.0).ToString("F1")) KB</p>
                <p><strong>File Type:</strong> @document.ContentType</p>
                
                <div class="mt-3">
                    <a href="/chatgpt/chat?documentId=@document.Id" class="btn btn-primary">Use in Chat</a>
                    <button class="btn btn-outline-secondary" @onclick="DownloadDocument">Download</button>
                </div>
            </div>
        </div>

        @if (isDocx)
        {
            <!-- DOCX Formatted Preview -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Document Preview</h5>
                </div>
                <div class="card-body">
                    <div class="text-muted small mb-2">
                        @(document.ContentType ?? "DOCX") · DOCX formatted preview
                    </div>
                    @if (!string.IsNullOrWhiteSpace(docxRenderError))
                    {
                        <div class="alert alert-warning py-2 mt-2 mb-0">
                            <div class="fw-semibold">DOCX preview failed</div>
                            <div class="small"><code>@docxRenderError</code></div>
                        </div>
                    }
                    <div id="docx-preview-container"
                         class="border rounded p-2"
                         style="background: white; max-height: 600px; overflow-y: auto;">
                        <div class="text-muted small">Rendering DOCX…</div>
                    </div>
                </div>
            </div>
        }
        else if (isExcel || isCsv)
        {
            <!-- Excel/CSV Table Preview -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Data Preview</h5>
                </div>
                <div class="card-body">
                    <div class="text-muted small mb-2">
                        @(document.ContentType ?? (isExcel ? "Excel" : "CSV")) · Formatted table preview
                    </div>
                    @if (structuredData != null && structuredData.Any())
                    {
                        @foreach (var sheet in structuredData)
                        {
                            @if (structuredData.Count > 1)
                            {
                                <h6 class="mt-3 mb-2">@sheet.SheetName</h6>
                            }
                            @if (sheet.Rows.Count >= 100)
                            {
                                <div class="alert alert-info mb-2">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Showing first 100 rows as preview. Full data is available for chat analysis.
                                </div>
                            }
                            <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                                <table class="table table-sm table-bordered table-striped table-hover">
                                    @if (sheet.Rows.Any())
                                    {
                                        // Find max columns to ensure consistent table structure
                                        var maxCols = sheet.Rows.Max(r => r.Count);
                                        
                                        <thead class="table-light sticky-top">
                                            <tr>
                                                @for (int col = 0; col < maxCols; col++)
                                                {
                                                    var headerValue = col < sheet.Rows[0].Count ? sheet.Rows[0][col] : "";
                                                    <th>@(string.IsNullOrWhiteSpace(headerValue) ? $"Column {col + 1}" : headerValue)</th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 1; i < sheet.Rows.Count; i++)
                                            {
                                                <tr>
                                                    @for (int col = 0; col < maxCols; col++)
                                                    {
                                                        var cellValue = col < sheet.Rows[i].Count ? sheet.Rows[i][col] : "";
                                                        <td>@cellValue</td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    }
                                </table>
                            </div>
                        }
                    }
                    else if (isLoadingStructuredData)
                    {
                        <div class="text-muted small">Loading data...</div>
                    }
                    else
                    {
                        <div class="alert alert-warning">Unable to load structured data. Showing extracted text instead.</div>
                        <div class="border rounded p-2" style="max-height: 600px; overflow-y: auto;">
                            <div style="white-space: pre-wrap; font-family: 'Courier New', monospace;">@document.ExtractedText</div>
                        </div>
                    }
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(document.ExtractedText))
        {
            <!-- Extracted Text Preview -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Extracted Text</h5>
                </div>
                <div class="card-body">
                    <div class="border rounded p-2" style="max-height: 600px; overflow-y: auto;">
                        @if (isExcel)
                        {
                            <!-- Excel files are formatted with sheets and pipe-separated values -->
                            <div style="white-space: pre-wrap; font-family: 'Courier New', monospace;">@document.ExtractedText</div>
                        }
                        else
                        {
                            <div style="white-space: pre-wrap;">@document.ExtractedText</div>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No text was extracted from this document. The document may be an image-based PDF or in an unsupported format.
            </div>
        }
    }
</div>

@code {
    [Parameter] public int DocumentId { get; set; }

    private Document? document;
    private string? errorMessage;
    private string? userId;
    private int? tenantId;
    private bool isDocx = false;
    private bool isExcel = false;
    private bool isCsv = false;
    private string? docxRenderError;
    private bool docxRendered = false;
    private List<SheetData>? structuredData;
    private bool isLoadingStructuredData = false;

    protected override async Task OnParametersSetAsync()
    {
        // Check if Documents feature is enabled
        var isEnabled = await FeatureFlagService.IsEnabledAsync("Documents_Enabled");
        if (!isEnabled)
        {
            NavigationManager.NavigateTo("/");
            return;
        }

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        userId = authState.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        tenantId = TenantService.GetCurrentTenantId();

        if (string.IsNullOrEmpty(userId) || tenantId == null)
        {
            errorMessage = "Unable to identify user or organization.";
            return;
        }

        await LoadDocument();
    }

    private async Task LoadDocument()
    {
        if (string.IsNullOrEmpty(userId) || tenantId == null)
            return;

        try
        {
            document = await DocumentService.GetDocumentByIdAsync(DocumentId, userId, tenantId.Value);
            if (document != null)
            {
                isDocx = IsDocx(document);
                isExcel = IsExcel(document);
                isCsv = IsCsv(document);
                docxRenderError = null;
                docxRendered = false;
                
                // Load structured data for Excel/CSV
                if (isExcel || isCsv)
                {
                    await LoadStructuredData();
                }
                
                StateHasChanged(); // Trigger re-render so OnAfterRenderAsync can run
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading document: {ex.Message}";
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Render DOCX preview after the DOM updates
        // This will be called after every render, so we check docxRendered flag
        if (isDocx && document != null && !docxRendered)
        {
            try
            {
                // Wait a bit for DOM to be ready
                await Task.Delay(150);
                
                // Check if container exists
                var containerExists = await JSRuntime.InvokeAsync<bool>("eval", "document.getElementById('docx-preview-container') !== null");
                if (!containerExists)
                {
                    // Container not ready yet, will try again on next render
                    return;
                }

                var url = $"/api/documents/{document.Id}/file";

                // Check if the JS library is present
                var docxLibOk = await JSRuntime.InvokeAsync<bool>("eval", "typeof window.docx !== 'undefined' && typeof window.docx.renderAsync === 'function'");
                if (!docxLibOk)
                {
                    docxRenderError = "DOCX preview library is not loaded (window.docx.renderAsync missing). Please refresh the page.";
                    docxRendered = true; // Mark as rendered to prevent retries
                    StateHasChanged();
                    return;
                }

                // Check if bedrockDocxPreview is available
                var previewLibOk = await JSRuntime.InvokeAsync<bool>("eval", "typeof window.bedrockDocxPreview !== 'undefined' && typeof window.bedrockDocxPreview.render === 'function'");
                if (!previewLibOk)
                {
                    docxRenderError = "DOCX preview wrapper is not loaded (window.bedrockDocxPreview.render missing). Please refresh the page.";
                    docxRendered = true; // Mark as rendered to prevent retries
                    StateHasChanged();
                    return;
                }

                // Mark as rendered before calling to prevent multiple calls
                docxRendered = true;
                StateHasChanged();

                // Now render the document
                await JSRuntime.InvokeVoidAsync("bedrockDocxPreview.render", url, "docx-preview-container");
            }
            catch (Exception ex)
            {
                docxRenderError = $"Error rendering DOCX: {ex.Message}";
                if (ex.InnerException != null)
                {
                    docxRenderError += $" ({ex.InnerException.Message})";
                }
                docxRendered = true; // Mark as rendered even on error to prevent retries
                StateHasChanged();
            }
        }
    }

    private static bool IsDocx(Document? doc)
    {
        if (doc == null) return false;
        if (!string.IsNullOrWhiteSpace(doc.FileName) && doc.FileName.EndsWith(".docx", StringComparison.OrdinalIgnoreCase)) return true;
        return string.Equals(doc.ContentType, "application/vnd.openxmlformats-officedocument.wordprocessingml.document", StringComparison.OrdinalIgnoreCase);
    }

    private static bool IsExcel(Document? doc)
    {
        if (doc == null) return false;
        if (!string.IsNullOrWhiteSpace(doc.FileName))
        {
            if (doc.FileName.EndsWith(".xlsx", StringComparison.OrdinalIgnoreCase) || 
                doc.FileName.EndsWith(".xls", StringComparison.OrdinalIgnoreCase))
                return true;
        }
        return string.Equals(doc.ContentType, "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet", StringComparison.OrdinalIgnoreCase) ||
               string.Equals(doc.ContentType, "application/vnd.ms-excel", StringComparison.OrdinalIgnoreCase);
    }

    private static bool IsCsv(Document? doc)
    {
        if (doc == null) return false;
        if (!string.IsNullOrWhiteSpace(doc.FileName) && doc.FileName.EndsWith(".csv", StringComparison.OrdinalIgnoreCase))
            return true;
        return string.Equals(doc.ContentType, "text/csv", StringComparison.OrdinalIgnoreCase) ||
               string.Equals(doc.ContentType, "application/csv", StringComparison.OrdinalIgnoreCase);
    }

    private async Task LoadStructuredData()
    {
        if (string.IsNullOrEmpty(userId) || tenantId == null || document == null)
            return;

        isLoadingStructuredData = true;
        StateHasChanged();

        try
        {
            structuredData = await DocumentService.GetStructuredDataAsync(document.Id, userId, tenantId.Value);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading structured data: {ex.Message}";
            structuredData = null;
        }
        finally
        {
            isLoadingStructuredData = false;
            StateHasChanged();
        }
    }

    private async Task DownloadDocument()
    {
        if (document == null || string.IsNullOrEmpty(userId) || tenantId == null)
            return;

        try
        {
            var fileContent = await DocumentService.GetDocumentFileAsync(document.Id, userId, tenantId.Value);
            var fileName = document.FileName;
            
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(fileContent), document.ContentType);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error downloading document: {ex.Message}";
            StateHasChanged();
        }
    }
}
