@page "/admin/roles"
@using Blazor_Bedrock.Services.RoleManagement
@using Blazor_Bedrock.Services.Tenant
@using Blazor_Bedrock.Services.Auth
@using Blazor_Bedrock.Services.FeatureFlag
@using Blazor_Bedrock.Data.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject IRoleService RoleService
@inject ITenantService TenantService
@inject IPermissionService PermissionService
@inject IFeatureFlagService FeatureFlagService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject INotificationService NotificationService
@rendermode InteractiveServer

<PageTitle>Role Management</PageTitle>

<div class="container-fluid mt-4">
    <h4 class="mb-4">Role Management</h4>
    
    <div class="card shadow">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Search roles..." @bind="_searchText" @bind:event="oninput" />
                </div>
                <PermissionGate PermissionName="Roles.Add">
                    <button class="btn btn-primary" @onclick="NavigateToCreate">
                        <i class="bi bi-plus-circle me-2"></i>
                        Add Role
                    </button>
                </PermissionGate>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in FilteredRoles)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td>@role.Description</td>
                                <td>
                                    @if (role.IsSystemRole)
                                    {
                                        <span class="badge bg-warning">System</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Custom</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <PermissionGate PermissionName="Roles.Edit">
                                            <button class="btn btn-sm btn-outline-primary" @onclick="() => NavigateToEdit(role.Id)" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        </PermissionGate>
                                        @if (!role.IsSystemRole)
                                        {
                                            <PermissionGate PermissionName="Roles.Delete">
                                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteRole(role.Id)" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </PermissionGate>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ApplicationRole> _roles = new();
    private string _searchText = string.Empty;
    private bool _canView = false;

    private IEnumerable<ApplicationRole> FilteredRoles
    {
        get
        {
            if (string.IsNullOrWhiteSpace(_searchText))
                return _roles;

            var search = _searchText.ToLower();
            return _roles.Where(r => 
                r.Name?.ToLower().Contains(search) == true ||
                r.Description?.ToLower().Contains(search) == true);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        // Check if Roles feature is enabled
        var isEnabled = await FeatureFlagService.IsEnabledAsync("Roles_Enabled");
        if (!isEnabled)
        {
            await NotificationService.ShowErrorAsync("Role management feature has been disabled.");
            Navigation.NavigateTo("/");
            return;
        }

        // Check permission to view roles
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User?.Identity?.IsAuthenticated == true)
        {
            var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            var tenantId = TenantService.GetCurrentTenantId();
            
            if (!string.IsNullOrEmpty(userId) && tenantId.HasValue)
            {
                _canView = await PermissionService.UserHasPermissionAsync(userId, tenantId.Value, "Roles.View");
                if (!_canView)
                {
                    await NotificationService.ShowErrorAsync("You do not have permission to view roles.");
                    Navigation.NavigateTo("/");
                    return;
                }
            }
            else
            {
                Navigation.NavigateTo("/");
                return;
            }
        }
        else
        {
            Navigation.NavigateTo("/auth/login");
            return;
        }

        await LoadRolesAsync();
    }

    private async Task LoadRolesAsync()
    {
        var tenantId = TenantService.GetCurrentTenantId();
        _roles = await RoleService.GetRolesAsync(tenantId);
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/admin/roles/create");
    }

    private void NavigateToEdit(string roleId)
    {
        Navigation.NavigateTo($"/admin/roles/edit/{roleId}");
    }

    private async Task DeleteRole(string roleId)
    {
        var result = await RoleService.DeleteRoleAsync(roleId);
        if (result.Succeeded)
        {
            await NotificationService.ShowSuccessAsync("Role deleted successfully");
            await LoadRolesAsync();
        }
        else
        {
            await NotificationService.ShowErrorAsync($"Error: {string.Join(", ", result.Errors.Select(e => e.Description))}");
        }
    }
}
