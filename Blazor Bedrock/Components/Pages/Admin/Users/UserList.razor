@page "/admin/users"
@using Blazor_Bedrock.Services.UserManagement
@using Blazor_Bedrock.Services.Tenant
@using Blazor_Bedrock.Services.Auth
@using Blazor_Bedrock.Services.Subscription
@using Blazor_Bedrock.Services.FeatureFlag
@using Blazor_Bedrock.Data.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject IUserService UserService
@inject ITenantService TenantService
@inject IPermissionService PermissionService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject INotificationService NotificationService
@inject ISubscriptionLimitationService LimitationService
@inject IFeatureFlagService FeatureFlagService
@rendermode InteractiveServer

<PageTitle>User Management</PageTitle>

<div class="container-fluid mt-4">
    <h4 class="mb-4">User Management</h4>
    
    @* Subscription Limitation Counter *@
    @if (_subscriptionsEnabled && _limitations != null)
    {
        <div class="limitation-counter mb-3">
            <div class="d-flex align-items-center">
                <span class="text-muted me-2">
                    <i class="bi bi-info-circle me-1"></i>
                    Users:
                </span>
                @if (_maxUsers.HasValue)
                {
                    <span class="@GetBadgeClass()">
                        @_currentUserCount / @_maxUsers
                    </span>
                }
                else
                {
                    <span class="badge bg-success">
                        @_currentUserCount (Unlimited)
                    </span>
                }
            </div>
            @if (_maxUsers.HasValue)
            {
                @if (_currentUserCount >= _maxUsers)
                {
                    <div class="alert alert-warning alert-sm mt-2 mb-0 py-1">
                        <small><i class="bi bi-exclamation-triangle me-1"></i>Limit reached. Upgrade your subscription to add more.</small>
                    </div>
                }
                else if (_currentUserCount >= _maxUsers * 0.9)
                {
                    <div class="alert alert-info alert-sm mt-2 mb-0 py-1">
                        <small><i class="bi bi-info-circle me-1"></i>Approaching limit (@((_maxUsers - _currentUserCount)) remaining).</small>
                    </div>
                }
            }
        </div>
    }
    
    <div class="card shadow">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Search users..." @bind="_searchText" @bind:event="oninput" />
                </div>
                <PermissionGate PermissionName="Users.Add">
                    <button class="btn btn-primary" @onclick="NavigateToCreate">
                        <i class="bi bi-plus-circle me-2"></i>
                        Add User
                    </button>
                </PermissionGate>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Last Login</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in FilteredUsers)
                        {
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>@(user.LastLoginAt?.ToString("g") ?? "Never")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <PermissionGate PermissionName="Users.Edit">
                                            <button class="btn btn-sm btn-outline-primary" @onclick="() => NavigateToEdit(user.Id)" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        </PermissionGate>
                                        <PermissionGate PermissionName="Users.Delete">
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteUser(user.Id)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </PermissionGate>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ApplicationUser> _users = new();
    private string _searchText = string.Empty;
    private bool _canView = false;
    private bool _subscriptionsEnabled = false;
    private SubscriptionLimitations? _limitations;
    private int _currentUserCount = 0;
    private int? _maxUsers;

    private IEnumerable<ApplicationUser> FilteredUsers
    {
        get
        {
            if (string.IsNullOrWhiteSpace(_searchText))
                return _users;

            var search = _searchText.ToLower();
            return _users.Where(u => 
                u.FirstName?.ToLower().Contains(search) == true ||
                u.LastName?.ToLower().Contains(search) == true ||
                u.Email?.ToLower().Contains(search) == true);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        // Check if Users feature is enabled
        var isEnabled = await FeatureFlagService.IsEnabledAsync("Users_Enabled");
        if (!isEnabled)
        {
            await NotificationService.ShowErrorAsync("User management feature has been disabled.");
            Navigation.NavigateTo("/");
            return;
        }

        // Check permission to view users
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User?.Identity?.IsAuthenticated == true)
        {
            var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            var tenantId = TenantService.GetCurrentTenantId();
            
            if (!string.IsNullOrEmpty(userId) && tenantId.HasValue)
            {
                _canView = await PermissionService.UserHasPermissionAsync(userId, tenantId.Value, "Users.View");
                if (!_canView)
                {
                    await NotificationService.ShowErrorAsync("You do not have permission to view users.");
                    Navigation.NavigateTo("/");
                    return;
                }
            }
            else
            {
                Navigation.NavigateTo("/");
                return;
            }
        }
        else
        {
            Navigation.NavigateTo("/auth/login");
            return;
        }

        await LoadUsersAsync();
        await LoadSubscriptionInfoAsync();
    }

    private async Task LoadSubscriptionInfoAsync()
    {
        var tenantId = TenantService.GetCurrentTenantId();
        if (tenantId.HasValue)
        {
            _subscriptionsEnabled = await FeatureFlagService.IsEnabledAsync("Subscriptions");
            
            if (_subscriptionsEnabled)
            {
                _currentUserCount = await LimitationService.GetCurrentCountAsync(tenantId, LimitationType.Users);
                _limitations = await LimitationService.GetTenantLimitationsAsync(tenantId);
                _maxUsers = _limitations?.MaxUsers;
            }
        }
    }

    private string GetBadgeClass()
    {
        if (!_maxUsers.HasValue) return "badge bg-secondary";
        
        var percentage = (double)_currentUserCount / _maxUsers.Value;
        return percentage >= 1.0 
            ? "badge bg-danger" 
            : percentage >= 0.9 
                ? "badge bg-warning" 
                : "badge bg-success";
    }

    private async Task LoadUsersAsync()
    {
        var tenantId = TenantService.GetCurrentTenantId();
        if (tenantId.HasValue)
        {
            _users = await UserService.GetUsersAsync(tenantId.Value);
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/admin/users/create");
    }

    private void NavigateToEdit(string userId)
    {
        Navigation.NavigateTo($"/admin/users/edit/{userId}");
    }

    private async Task DeleteUser(string userId)
    {
        var result = await UserService.DeleteUserAsync(userId);
        if (result.Succeeded)
        {
            await NotificationService.ShowSuccessAsync("User deleted successfully");
            await LoadUsersAsync();
            await LoadSubscriptionInfoAsync(); // Refresh limitation counter
        }
        else
        {
            await NotificationService.ShowErrorAsync($"Error: {string.Join(", ", result.Errors.Select(e => e.Description))}");
        }
    }
}
