@page "/superadmin/migrations"
@using Blazor_Bedrock.Services.Migrations
@using Blazor_Bedrock.Data.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject IMigrationService MigrationService
@inject AuthenticationStateProvider AuthStateProvider
@inject INotificationService NotificationService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Migration Management</PageTitle>

<div class="container-fluid mt-4">
    <h4 class="mb-4">Migration Management</h4>
    
    <div class="card shadow">
        <div class="card-body p-4">
            <button class="btn btn-primary mb-4" @onclick="OpenCreateDialog">
                <i class="bi bi-plus-circle me-2"></i>
                Create Migration
            </button>

            <div class="row">
                @foreach (var migration in _migrations)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6>@migration.Name</h6>
                                <p class="card-text">@migration.Description</p>
                                <small class="text-muted">Version: @migration.Version</small>
                                <p class="mt-2">
                                    <span class="badge @GetStatusBadgeClass(migration.Status)">@migration.Status</span>
                                </p>
                                @if (migration.ExecutedAt.HasValue)
                                {
                                    <small class="text-muted d-block mt-2">
                                        Executed: @migration.ExecutedAt.Value.ToString("g")
                                    </small>
                                }
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => ViewMigration(migration.Id)">
                                    View
                                </button>
                                @if (migration.Status == MigrationStatus.Pending)
                                {
                                    <button class="btn btn-sm btn-success" @onclick="() => ExecuteMigration(migration.Id)">
                                        Execute
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Create Migration Modal -->
<div class="modal fade" id="createMigrationModal" tabindex="-1" aria-labelledby="createMigrationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createMigrationModalLabel">Create Migration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="migrationName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="migrationName" @bind="_newMigration.Name" required />
                </div>
                <div class="mb-3">
                    <label for="migrationDescription" class="form-label">Description</label>
                    <textarea class="form-control" id="migrationDescription" rows="3" @bind="_newMigration.Description"></textarea>
                </div>
                <div class="mb-3">
                    <label for="migrationVersion" class="form-label">Version</label>
                    <input type="text" class="form-control" id="migrationVersion" @bind="_newMigration.Version" required />
                </div>
                <div class="mb-3">
                    <label for="migrationSql" class="form-label">SQL Script</label>
                    <textarea class="form-control" id="migrationSql" rows="10" @bind="_newMigration.SqlScript" required></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="CloseCreateDialog">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="CreateMigration">Create</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<MigrationEntry> _migrations = new();
    private bool _showCreateDialog = false;
    private MigrationModel _newMigration = new();

    private class MigrationModel
    {
        public string Name { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Version { get; set; } = string.Empty;
        public string SqlScript { get; set; } = string.Empty;
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadMigrationsAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_showCreateDialog)
        {
            await JSRuntime.InvokeVoidAsync("eval", "new bootstrap.Modal(document.getElementById('createMigrationModal')).show()");
        }
    }

    private async Task LoadMigrationsAsync()
    {
        _migrations = await MigrationService.GetAllMigrationsAsync();
    }

    private void OpenCreateDialog()
    {
        _newMigration = new MigrationModel();
        _showCreateDialog = true;
        StateHasChanged();
    }

    private async Task CloseCreateDialog()
    {
        _showCreateDialog = false;
        await JSRuntime.InvokeVoidAsync("eval", "bootstrap.Modal.getInstance(document.getElementById('createMigrationModal'))?.hide()");
    }

    private async Task CreateMigration()
    {
        try
        {
            await MigrationService.CreateMigrationAsync(
                _newMigration.Name,
                _newMigration.Description,
                _newMigration.Version,
                _newMigration.SqlScript);
            
            await NotificationService.ShowSuccessAsync("Migration created successfully");
            _showCreateDialog = false;
            await JSRuntime.InvokeVoidAsync("eval", "bootstrap.Modal.getInstance(document.getElementById('createMigrationModal'))?.hide()");
            await LoadMigrationsAsync();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error: {ex.Message}");
        }
    }

    private async Task ExecuteMigration(int migrationId)
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var executedBy = authState.User?.Identity?.Name ?? "System";
        
        try
        {
            var success = await MigrationService.ExecuteMigrationAsync(migrationId, executedBy);
            if (success)
            {
                await NotificationService.ShowSuccessAsync("Migration executed successfully");
            }
            else
            {
                await NotificationService.ShowErrorAsync("Migration execution failed");
            }
            await LoadMigrationsAsync();
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error: {ex.Message}");
        }
    }

    private void ViewMigration(int migrationId)
    {
        // Could open a dialog to view full migration details
    }

    private string GetStatusBadgeClass(MigrationStatus status)
    {
        return status switch
        {
            MigrationStatus.Pending => "bg-secondary",
            MigrationStatus.Running => "bg-info",
            MigrationStatus.Completed => "bg-success",
            MigrationStatus.Failed => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
