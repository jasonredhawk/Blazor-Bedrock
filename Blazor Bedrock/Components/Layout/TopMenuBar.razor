@using Blazor_Bedrock.Services.Navigation
@using Blazor_Bedrock.Services.Tenant
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@implements IDisposable
@inject IMenuService MenuService
@inject ITenantService TenantService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@rendermode InteractiveServer

<MudAppBar Elevation="2" Color="Color.Primary">
    <MudText Typo="Typo.h6" Class="ml-4">@ProjectTitle</MudText>
    
    <div class="d-flex align-center ml-4" style="flex: 1;">
        @foreach (var item in _menuItems)
        {
            @if (item.Children != null && item.Children.Any())
            {
                <MudMenu Icon="@item.Icon" Color="Color.Inherit" AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
                    <ActivatorContent>
                        <MudButton Variant="Variant.Text" Color="Color.Inherit" Class="mr-1" Style="text-transform: none;">
                            @if (!string.IsNullOrEmpty(item.Icon))
                            {
                                <MudIcon Icon="@item.Icon" Size="Size.Small" Class="mr-1" />
                            }
                            <MudText Typo="Typo.body1">@item.Title</MudText>
                            <MudIcon Icon="@Icons.Material.Filled.ArrowDropDown" Size="Size.Small" />
                        </MudButton>
                    </ActivatorContent>
                    <ChildContent>
                        @foreach (var child in item.Children)
                        {
                            <MudMenuItem OnClick="() => NavigateTo(child.Href)">
                                @if (!string.IsNullOrEmpty(child.Icon))
                                {
                                    <MudIcon Icon="@child.Icon" Size="Size.Small" Class="mr-2" />
                                }
                                @child.Title
                            </MudMenuItem>
                        }
                    </ChildContent>
                </MudMenu>
            }
            else if (!string.IsNullOrEmpty(item.Href))
            {
                <MudButton Variant="Variant.Text" Color="Color.Inherit" Class="mr-1" Style="text-transform: none;" Href="@item.Href">
                    @if (!string.IsNullOrEmpty(item.Icon))
                    {
                        <MudIcon Icon="@item.Icon" Size="Size.Small" Class="mr-1" />
                    }
                    <MudText Typo="Typo.body1">@item.Title</MudText>
                </MudButton>
            }
        }
    </div>
    
    <MudSpacer />
    
    <TenantSelector />
    <UserMenu />
</MudAppBar>

@code {
    [Parameter] public string ProjectTitle { get; set; } = "Blazor Bedrock";
    
    private List<MenuItem> _menuItems = new();
    private bool _isUpdating = false;

    protected override async Task OnInitializedAsync()
    {
        await UpdateMenuItems();
        
        // Subscribe to authentication state changes
        AuthStateProvider.AuthenticationStateChanged += OnAuthenticationStateChanged;
        
        // Subscribe to navigation changes to refresh menu when tenant might change
        Navigation.LocationChanged += OnLocationChanged;
    }

    private async void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        // Refresh menu when navigating (in case tenant changed)
        await UpdateMenuItems();
        await InvokeAsync(StateHasChanged);
    }

    private async void OnAuthenticationStateChanged(Task<AuthenticationState> authStateTask)
    {
        await UpdateMenuItems();
        await InvokeAsync(StateHasChanged);
    }

    private async Task UpdateMenuItems()
    {
        // Prevent concurrent execution
        if (_isUpdating)
            return;

        try
        {
            _isUpdating = true;
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (authState.User?.Identity?.IsAuthenticated == true)
            {
                var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                var tenantId = TenantService.GetCurrentTenantId();
                
                if (!string.IsNullOrEmpty(userId))
                {
                    _menuItems = await MenuService.GetMenuItemsAsync(userId, tenantId);
                }
            }
            else
            {
                // Show no menu items for unauthenticated users (Login button is in UserMenu component)
                _menuItems = new List<MenuItem>();
            }
        }
        catch (Exception ex)
        {
            // Ignore disposed object exceptions - component might be disposing
            if (ex is ObjectDisposedException)
            {
                return;
            }
            // Set default menu on error (empty for unauthenticated users, Login button is in UserMenu component)
            _menuItems = new List<MenuItem>();
        }
        finally
        {
            _isUpdating = false;
        }
    }

    public void Dispose()
    {
        if (AuthStateProvider != null)
        {
            AuthStateProvider.AuthenticationStateChanged -= OnAuthenticationStateChanged;
        }
        if (Navigation != null)
        {
            Navigation.LocationChanged -= OnLocationChanged;
        }
    }

    private void NavigateTo(string? href)
    {
        if (!string.IsNullOrEmpty(href))
        {
            Navigation.NavigateTo(href);
        }
    }
}

