@using Blazor_Bedrock.Services.Tenant
@inject ITenantService TenantService
@inject INotificationService NotificationService

<div class="modal fade" id="createOrgModal" tabindex="-1" aria-labelledby="createOrgModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createOrgModalLabel">Create Organization</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="orgName" class="form-label">Organization Name</label>
                    <input type="text" class="form-control" id="orgName" @bind="_name" required />
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" rows="3" @bind="_description"></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="domain" class="form-label">Domain (Optional)</label>
                    <input type="text" class="form-control" id="domain" @bind="_domain" />
                    <div class="form-text">Optional: Your organization's domain name</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="Cancel">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="Create" disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Creating...</span>
                    }
                    else
                    {
                        <span>Create</span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string? UserId { get; set; }
    [Parameter] public EventCallback OnCreated { get; set; }

    private string _name = string.Empty;
    private string? _description;
    private string? _domain;
    private bool _isLoading = false;

    private void Cancel()
    {
        _name = string.Empty;
        _description = null;
        _domain = null;
    }

    private async Task Create()
    {
        if (string.IsNullOrWhiteSpace(_name))
        {
            await NotificationService.ShowWarningAsync("Organization name is required.");
            return;
        }

        if (string.IsNullOrWhiteSpace(UserId))
        {
            await NotificationService.ShowErrorAsync("User ID is missing. Please log out and log back in.");
            return;
        }

        _isLoading = true;

        try
        {
            var tenant = await TenantService.CreateTenantAsync(
                _name.Trim(), 
                string.IsNullOrWhiteSpace(_description) ? null : _description.Trim(),
                string.IsNullOrWhiteSpace(_domain) ? null : _domain.Trim(),
                UserId
            );

            if (tenant != null)
            {
                await NotificationService.ShowSuccessAsync("Organization created successfully!");
                await OnCreated.InvokeAsync();
                // Close modal via JavaScript
                await Task.Delay(100);
                Cancel();
            }
            else
            {
                await NotificationService.ShowErrorAsync("Failed to create organization. Please try again.");
                _isLoading = false;
            }
        }
        catch (Exception ex)
        {
            await NotificationService.ShowErrorAsync($"Error creating organization: {ex.Message}");
            _isLoading = false;
        }
    }
}
